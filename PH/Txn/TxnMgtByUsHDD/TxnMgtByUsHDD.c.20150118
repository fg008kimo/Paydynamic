#define PD_DETAIL_TAG   "dt"

char cDebug;
OBJPTR(DB);
OBJPTR(BO);

void TxnMgtByUsHDD(char    cdebug)
{
	cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                  const hash_t* hRequest,
                        hash_t* hResponse)
{

	int	iRet = PD_OK;
	char	*csTmp;

	char	*csCountry;
	char	*csService;
	char	*csDate;
	char	*csUser;

	char	csTag[PD_TAG_LEN+1];
	int	i = 0;
	int	iCnt = 0;


DEBUGLOG(("TxnMgtByUsHDD::Authorize\n"));

/* total_cnt */
	if (GetField_Int(hContext, "total_cnt", &iCnt)) {
DEBUGLOG(("Authorize::total_cnt = [%d]\n", iCnt));
	}
	else {
DEBUGLOG(("Authorize::total_cnt not found\n"));
ERRLOG("TxnMgtByUsHDD::Authorize::total_cnt not found\n");
		iRet = INT_FORMAT_ERR;

		PutField_Int(hContext,"internal_error",iRet);
	}

	if(GetField_CString(hRequest,"add_user",&csUser)){
DEBUGLOG(("Authorize::create_user= [%s]\n",csUser));
DEBUGLOG(("Authorize::update_user= [%s]\n",csUser));
	}

	if (iRet == PD_OK) {
		for (i = 0; i < iCnt; i++) {

			memset(csTag, 0, sizeof(csTag));
			sprintf(csTag, "%s_country_%d", PD_DETAIL_TAG, i+1);
			if (GetField_CString(hRequest, csTag, &csCountry)) {
DEBUGLOG(("Authorize::() [%s] = [%s]\n", csTag, csCountry));
			}
			else {
DEBUGLOG(("Authorize::[%s] not found\n", csTag));
ERRLOG("TxnMgtByUsHDD::Authorize::[%s] not found\n", csTag);
				iRet = INT_TXN_COUNTRY_NOT_FOUND;
				PutField_Int(hContext, "internal_error", iRet);
                        }

			memset(csTag, 0, sizeof(csTag));
			sprintf(csTag, "%s_service_%d", PD_DETAIL_TAG, i+1);
			if (GetField_CString(hRequest, csTag, &csService)) {
DEBUGLOG(("Authorize::() [%s] = [%s]\n", csTag, csTmp));
                        }
			else {
DEBUGLOG(("Authorize::[%s] not found\n", csTag));
ERRLOG("TxnMgtByUsHDD::Authorize::[%s] not found\n", csTag);
                                iRet = INT_SERVICE_CODE_MISSING;
				PutField_Int(hContext, "internal_error", iRet);
                        }

			memset(csTag, 0, sizeof(csTag));
			sprintf(csTag, "%s_date_%d", PD_DETAIL_TAG, i+1);
			if (GetField_CString(hRequest, csTag, &csDate)) {
DEBUGLOG(("Authorize::() [%s] = [%s]\n", csTag, csDate));
			}
			else {
DEBUGLOG(("Authorize::[%s] not found\n", csTag));
ERRLOG("TxnMgtByUsHDD::Authorize::[%s] not found\n", csTag);
				iRet = INT_ERR;
				PutField_Int(hContext, "internal_error", iRet);
			}
			
			if (iRet != PD_OK) {
				break;
			}

DEBUGLOG(("Authorize::Call DBHoliday:Delete\n"));
			DBObjPtr = CreateObj(DBPtr,"DBHoliday","Delete");
			if((unsigned long)((*DBObjPtr)(csCountry, csService, csDate, csUser) != PD_OK)){
DEBUGLOG(("Authorize::DBHoliday:Delete Failed\n"));
ERRLOG("TxnMgtByUsHDD::Authorize::DBHoliday:Delete Failed\n");
				iRet = INT_ERR;
			}
			else {
DEBUGLOG(("Authorize::DBHoliday:Delete Succ\n"));
			}

		}
	}



DEBUGLOG(("TxnMgtByUsHDD Normal Exit() iRet = [%d]\n",iRet));
	return iRet;
}
