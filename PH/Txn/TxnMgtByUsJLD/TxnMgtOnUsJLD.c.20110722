#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "common.h"
#include "utilitys.h"
#include "ObjPtr.h"
#include "internal.h"
#include "TxnMgtOnUsJLD.h"
#include "myrecordset.h"

char cDebug;
OBJPTR(DB);

void TxnMgtOnUsJLD(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        const hash_t* hRequest,
                        hash_t* hResponse)
{
  int     iRet = PD_OK;
	char*	csTmp = NULL;
	hash_t	*hReq;
	
	char*	csJnlId;
	char* csUpdateUser;

	hReq = (hash_t*) malloc (sizeof(hash_t));

	hash_init(hReq,0);

	DEBUGLOG(("TxnMgtOnUsJLD::Authorize()\n"));

		// jnl_id //
	if (GetField_CString(hRequest,"jnl_id",&csJnlId)) {
		DEBUGLOG(("TxnMgtOnUsJLD::Authorize(): jnl_id = [%s]\n",csJnlId));
		PutField_CString(hReq,"jnl_id",csJnlId);
	}
		// update_user //
	if (GetField_CString(hRequest,"update_user",&csUpdateUser)) {
		DEBUGLOG(("TxnMgtOnUsJLD::Authorize(): update_user = [%s]\n",csUpdateUser));
		PutField_CString(hReq,"update_user",csUpdateUser);
	}
			
	// Delete Journal Header
	DBObjPtr = CreateObj(DBPtr,"DBCrrJnlHeader","Delete");
	iRet = (unsigned long) ((*DBObjPtr)(hReq));			

	if(iRet==PD_OK) {		
		DEBUGLOG(("TxnMgtOnUsJLD::CrrJnlHeader->Delete Success\n"));
		
		// Delete Journal Details
		DBObjPtr = CreateObj(DBPtr,"DBCrrJnlDetail","Delete");
		iRet = (unsigned long) ((*DBObjPtr)(hReq));	
		
		if(iRet!=PD_OK) {
			DEBUGLOG(("TxnMgtOnUsJLD::CrrJnlDetail->Delete Failed\n"));
		} else {
			DEBUGLOG(("TxnMgtOnUsJLD::CrrJnlDetail->Delete Success\n"));

			// Delete Journal Details Amt
			DBObjPtr = CreateObj(DBPtr,"DBCrrJnlDetailAmt","Delete");
			iRet = (unsigned long) ((*DBObjPtr)(csJnlId,csUpdateUser));	
			
			if(iRet!=PD_OK) {
				DEBUGLOG(("TxnMgtOnUsJLD::CrrJnlDetailAmt->Delete Failed\n"));
			} else {
				DEBUGLOG(("TxnMgtOnUsJLD::CrrJnlDetailAmt->Delete Success\n"));		
			}
		}	
	} else {
		DEBUGLOG(("TxnMgtOnUsJLD::CrrJnlHeader->Delete Failed\n"));	
	}			 	


	hash_destroy(hReq);
	FREE_ME(hReq);
	DEBUGLOG(("TxnMgtOnUsJLD::Authorize() Normal exit iret = [%d]\n",iRet));	
	return iRet;
}
