	if (iRet == PD_OK) {
		if (GetField_CString(hRequest,"ccy",&csCcy)) {
DEBUGLOG((" ccy = [%s]\n",csCcy));
			DBObjPtr = CreateObj(DBPtr,"DBCurrency","FindCurrency");
                  	if ((unsigned long)(DBObjPtr)(csCcy) == FOUND) {
