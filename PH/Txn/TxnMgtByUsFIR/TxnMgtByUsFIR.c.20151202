char cDebug;
OBJPTR(DB);
OBJPTR(BO);
#define FI_NEW_RATE_ERROR       	99
#define FI_NEW_W_OANDA_RATE_ERROR       98
#define FI_INT_ERROR            88
#define FI_INVALID_TXN          77

void TxnMgtByUsFIR(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;

	//char    *csTmp;
	char    *csFromCcy;
	char    *csToCcy;
	char    *csDate;
	char    *csUser;
	char    *csTxnSeq;
	char    csCmd[PD_TMP_BUF_LEN*2 + 1];
	//char    csLogFile[PD_TMP_BUF_LEN+1];
	//char    csReturnCode[PD_RESPONSE_CODE_LEN];
	double	dTmp;
	int	iId = 0;
	int	iCheckOandaRate= PD_TRUE;
	int	iSkipTolCheck= PD_FALSE;
	int	iMMSModeOff = PD_TRUE;
	hash_t  *hTxn;
	hTxn = (hash_t*)  malloc (sizeof(hash_t));
	hash_init(hTxn,0);

DEBUGLOG(("Authorize\n"));

        if(GetField_CString(hRequest,"fin_ccy",&csFromCcy)){
		PutField_CString(hTxn,"fundin_ccy",csFromCcy);
DEBUGLOG(("Authorize::fin_ccy = [%s]\n",csFromCcy));
        }

        if(GetField_Double(hRequest,"fin_amt",&dTmp)){
		//if(sscanf(csTmp,"%lf",&dTmp)==1)
			PutField_Double(hTxn,"fundin_amt",dTmp);
DEBUGLOG(("Authorize::fin_amt = [%lf]\n",dTmp));
        }

        if(GetField_CString(hRequest,"bank_ccy",&csToCcy)){
		PutField_CString(hTxn,"bank_ccy",csToCcy);
DEBUGLOG(("Authorize::bank_ccy = [%s]\n",csToCcy));
        }

        if(GetField_Double(hRequest,"bank_amt",&dTmp)){
		//if(sscanf(csTmp,"%lf",&dTmp)==1)
			PutField_Double(hTxn,"bank_amt",dTmp);
DEBUGLOG(("Authorize::bank_amt = [%lf]\n",dTmp));
        }

	if(GetField_CString(hContext,"PHDATE",&csDate)){
		PutField_CString(hTxn,"fundin_date",csDate);
DEBUGLOG(("Authorize::fundin_date = [%s]\n",csDate));
	}


        if(GetField_CString(hRequest,"add_user",&csUser)){
		PutField_CString(hTxn,"add_user",csUser);
DEBUGLOG(("Authorize::add_user= [%s]\n",csUser));
        }

        if(GetField_Int(hRequest,"check_oanda_rate_diff",&iCheckOandaRate)){
DEBUGLOG(("Authorize::check_oanda_rate_diff = [%d]\n",iCheckOandaRate));
        }
	else{
DEBUGLOG(("Authorize::check_oanda_rate_diff = [%d] (default)\n",iCheckOandaRate));
	}

        if(GetField_Int(hRequest,"skip_tol_check",&iSkipTolCheck)){
DEBUGLOG(("Authorize::skip_tolerance_check = [%d]\n",iSkipTolCheck));
        }
	else{
DEBUGLOG(("Authorize::skip_tolerance_check = [%d] (default)\n",iSkipTolCheck));
	}

	//check MMS Mode
	if (iRet == PD_OK) {
		char*   csValue;
		csValue = (char*) malloc (128);
		DBObjPtr = CreateObj(DBPtr,"DBSystemParameter","FindCode");
		if ((unsigned long)(DBObjPtr)(PD_MMSMODE,csValue) == FOUND) {
DEBUGLOG(("MMS Mode = [%s]\n",csValue));
			if (!strcmp(csValue, PD_ENABLE_MMSMODE)){
				iMMSModeOff = PD_FALSE;
				iRet = PD_SKIP_OK;
DEBUGLOG(("MMS Mode is 'ON'. Skip Process!!!\n"));
			}
		}
		FREE_ME(csValue);
	}


	if(iRet==PD_OK){
DEBUGLOG(("Authorize::call DBFundsIn->Add\n"));
		DBObjPtr = CreateObj(DBPtr,"DBFundsIn","Add");
		iRet = (unsigned long)(*DBObjPtr)(hTxn);
	}

	if(iRet==PD_OK){
		TxnCommit();

		if(GetField_Int(hTxn,"fundsin_id",&iId)){
DEBUGLOG(("Authorize::call BOBalance->CheckInputSebRate\n"));
			BOObjPtr = CreateObj(BOPtr,"BOBalance","CheckInputSebRate");
			iRet = (unsigned long)(*BOObjPtr)(hTxn,hRequest);

			if(iRet == PD_OK){
				//sprintf(csLogFile, "%s/%s", getenv("LOGPATH"),"fundin_balance.txt");

				//sprintf(csCmd,"fundin_balance.exec -d %s -i %d -c %d -k %d; echo $? > %s",csDate,iId,iCheckOandaRate,iSkipTolCheck,csLogFile);
				sprintf(csCmd,"fundin_balance.exec -d %s -i %d -c %d -k %d",csDate,iId,iCheckOandaRate,iSkipTolCheck);
				iRet = system(csCmd);
			}

		}
		else{
			iRet = INT_ERR;
DEBUGLOG(("Authorize::FundsIn ID not found!!!!\n"));
		}
	}

/*
	if(iRet==PD_OK){
		FILE    *fp;
                fp = fopen(csLogFile, "r");
		if (fp){
			fgets(csReturnCode,PD_RESPONSE_CODE_LEN,fp);
			if (csReturnCode[strlen(csReturnCode) - 1] == 0x0A)
				csReturnCode[strlen(csReturnCode)-1] = '\0';
DEBUGLOG(("Authorize::return code = [%s]\n", csReturnCode));
			
			if(atoi(csReturnCode)!=PD_OK){
				if(atoi(csReturnCode)==FI_NEW_RATE_ERROR)
					iRet = INT_LARGE_DIFF_NEW_RATE;
				else if(atoi(csReturnCode)==FI_NEW_W_OANDA_RATE_ERROR)
					iRet = INT_LARGE_DIFF_OANDA_NEW_RATE;
				else if(atoi(csReturnCode)==FI_INVALID_TXN)
					iRet = INT_INVALID_TXN;
				else
					iRet = INT_ERR;
			}
		}

		fclose(fp);
		sprintf(csCmd,"rm %s",csLogFile);
		system(csCmd);
	}
*/
	if(iRet == PD_OK && iSkipTolCheck){
		double dDiff = 0.0;
		double dThreshold = 0.0;
		double dOandaThreshold = 0.0;
		int iTmpRet = PD_OK;
		GetField_Double(hTxn,"input_diff",&dDiff);
		GetField_Double(hTxn,"org_tol",&dThreshold);
		GetField_Double(hTxn,"oanda_tol",&dOandaThreshold);
		GetField_Int(hTxn,"result",&iTmpRet);

		if(GetField_CString(hContext,"txn_seq",&csTxnSeq)){
			sprintf(csCmd,"fundin_alert.sh %s %s %d %d %.2f %.2f %.2f %s %s",
							csTxnSeq,csUser,iTmpRet,iSkipTolCheck,
							dDiff,dThreshold,dOandaThreshold,
							csFromCcy,csToCcy);
DEBUGLOG(("TxnMgtByUsFIR csCmd = [%s]\n",csCmd));
			system(csCmd);
		}
	}

	if(iRet == PD_OK){
		if(GetField_Int(hTxn,"fundsin_id",&iId)){
			PutField_Int(hContext,"fundsin_id",iId);
		}
	}

	if(iRet == PD_SKIP_OK)
		iRet = PD_OK;


	FREE_ME(hTxn);
DEBUGLOG(("TxnMgtByUsFIR Normal Exit() iRet = [%d]\n",iRet));
        return iRet;
}
