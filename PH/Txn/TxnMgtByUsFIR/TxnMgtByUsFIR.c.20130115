int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;

	char    *csTmp;
	char    *csDate;
	char    csCmd[PD_TMP_BUF_LEN*2 + 1];
	char    csLogFile[PD_TMP_BUF_LEN+1];
	char    csReturnCode[PD_RESPONSE_CODE_LEN];
	double	dTmp;
	hash_t  *hTxn;
	hTxn = (hash_t*)  malloc (sizeof(hash_t));
	hash_init(hTxn,0);

DEBUGLOG(("Authorize\n"));

        if(GetField_CString(hRequest,"fin_ccy",&csTmp)){
		PutField_CString(hTxn,"fundin_ccy",csTmp);
DEBUGLOG(("Authorize::fin_ccy = [%s]\n",csTmp));
        }

        if(GetField_Double(hRequest,"fin_amt",&dTmp)){
		//if(sscanf(csTmp,"%lf",&dTmp)==1)
			PutField_Double(hTxn,"fundin_amt",dTmp);
DEBUGLOG(("Authorize::fin_amt = [%lf]\n",dTmp));
        }

        if(GetField_CString(hRequest,"bank_ccy",&csTmp)){
		PutField_CString(hTxn,"bank_ccy",csTmp);
DEBUGLOG(("Authorize::bank_ccy = [%s]\n",csTmp));
        }

        if(GetField_Double(hRequest,"bank_amt",&dTmp)){
		//if(sscanf(csTmp,"%lf",&dTmp)==1)
			PutField_Double(hTxn,"bank_amt",dTmp);
DEBUGLOG(("Authorize::bank_amt = [%lf]\n",dTmp));
        }

	if(GetField_CString(hContext,"PHDATE",&csDate)){
		PutField_CString(hTxn,"fundin_date",csDate);
DEBUGLOG(("Authorize::fundin_date = [%s]\n",csDate));
	}


        if(GetField_CString(hRequest,"add_user",&csTmp)){
		PutField_CString(hTxn,"add_user",csTmp);
DEBUGLOG(("Authorize::add_user= [%s]\n",csTmp));
        }

	if(iRet==PD_OK){
DEBUGLOG(("Authorize::call DBFundsIn->Add\n"));
		DBObjPtr = CreateObj(DBPtr,"DBFundsIn","Add");
		iRet = (unsigned long)(*DBObjPtr)(hTxn);
	}

	if(iRet==PD_OK){
		TxnCommit();

		sprintf(csLogFile, "%s/%s", getenv("LOGPATH"),"fundin_balance.txt");

		sprintf(csCmd,"fundin_balance.exec -d %s; echo $? > %s",csDate,csLogFile);
		iRet = system(csCmd);
	}
	if(iRet==PD_OK){
		FILE    *fp;
                fp = fopen(csLogFile, "r");
		if (fp){
			fgets(csReturnCode,PD_RESPONSE_CODE_LEN,fp);
			if (csReturnCode[strlen(csReturnCode) - 1] == 0x0A)
				csReturnCode[strlen(csReturnCode)-1] = '\0';
DEBUGLOG(("Authorize::return code = [%s]\n", csReturnCode));
			
			if(atoi(csReturnCode)!=PD_OK)
				iRet = INT_ERR;
		}

		fclose(fp);
		sprintf(csCmd,"rm %s",csLogFile);
		system(csCmd);
	}


	FREE_ME(hTxn);
DEBUGLOG(("TxnMgtByUsFIR Normal Exit() iRet = [%d]\n",iRet));
        return iRet;
}
