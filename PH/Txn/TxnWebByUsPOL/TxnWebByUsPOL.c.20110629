char cDebug;

OBJPTR(Txn);
OBJPTR(DB);
OBJPTR(Channel);
void TxnWebByUsPOL(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        const hash_t* hRequest,
                        hash_t* hResponse)
{
	int	iRet = PD_OK;

	char	*csOrgTxnSeq;
	char	*csValue;
	char	cPtr;
	char	cStatus;

	hash_t	*hRec;
	
        recordset_t     *rRecordSet;
        rRecordSet = (recordset_t*) malloc (sizeof(recordset_t));
        recordset_init(rRecordSet,0);

	ChannelObjPtr = CreateObj(ChannelPtr,"WEBChannel","UpdateContext");
        iRet = (unsigned long)((*ChannelObjPtr)(hContext));

DEBUGLOG(("TxnWebByUsPOL Authorize()\n"));
        if (GetField_CString(hRequest,"txn_seq",&csOrgTxnSeq)) {


                PutField_CString(hResponse,"txn_seq",csOrgTxnSeq);
DEBUGLOG(("TxnWebByUsPOL org_txn_seq = [%s]\n",csOrgTxnSeq));
                DBObjPtr = CreateObj(DBPtr,"DBTransaction","GetTxnHeader");
                if ((*DBObjPtr)(csOrgTxnSeq,rRecordSet) == PD_OK) {
DEBUGLOG(("TxnWebByUsPOL found record = [%s]\n",csOrgTxnSeq));
                        hRec = RecordSet_GetFirst(rRecordSet);
                        while (hRec) {
                                if (GetField_CString(hRec,"merchant_id",&csValue)) {
DEBUGLOG(("TxnWebByUsPOL:merchant_id= [%s]\n",csValue));
                                        PutField_CString(hResponse,"merchant_id",csValue);
                                }
                                if (GetField_CString(hRec,"merchant_ref",&csValue)) {
DEBUGLOG(("TxnWebByUsPOL:merchant_ref= [%s]\n",csValue));
                                        PutField_CString(hResponse,"merchant_ref",csValue);
                                }
                                if (GetField_CString(hRec,"channel_code",&csValue)) {
DEBUGLOG(("TxnWebByUsPOL:channel_code= [%s]\n",csValue));
                                        PutField_CString(hResponse,"channel_code",csValue);
                                }
                                if (GetField_Char(hRec,"status",&cStatus)) {
DEBUGLOG(("TxnWebByUsPOL:status= [%c]\n",cStatus));
                                        PutField_Char(hResponse,"status",cStatus);
                                }
                                if (GetField_Char(hRec,"ar_ind",&cPtr)) {
DEBUGLOG(("TxnWebByUsPOL:ar_ind= [%c]\n",cPtr));
                                        PutField_Char(hResponse,"ar_ind",cPtr);
                                }
                                if (GetField_CString(hRec,"txn_code",&csValue)) {
DEBUGLOG(("TxnWebByUsPOL:txn_code= [%s]\n",csValue));
                                        PutField_CString(hContext,"txn_code",csValue);
                                }
                                hRec = RecordSet_GetNext(rRecordSet);
                        }
                }
                else {
DEBUGLOG(("TxnWebByUsPOL not found record for [%s]\n",csOrgTxnSeq));
                }
                RecordSet_Destroy(rRecordSet);

        }
        else
                iRet = INT_ERR;

        if (iRet == PD_OK && cStatus == PD_TO_PSP) {
                TxnObjPtr = CreateObj(TxnPtr,"TxnWebOnUsPOL","Authorize");
                iRet = (unsigned long)(*TxnObjPtr)(hContext,hRequest,hResponse);
DEBUGLOG(("TxnWebByUsPOL return from TxnWebOnUsPOL = [%d]\n",iRet));
        }


	RecordSet_Destroy(rRecordSet);
        FREE_ME(rRecordSet);
DEBUGLOG(("TxnWebByUsPOL() exit = [%d]\n",iRet));
	return	iRet;
}
