#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include "common.h"
#include "utilitys.h"
#include "ObjPtr.h"
#include "internal.h"
#include "TxnMgtByUsALT.h"
#include "myrecordset.h"
#include <curl/curl.h>
#include "queue_utility.h"
#include "mq_db.h"

char cDebug;

OBJPTR(DB);
OBJPTR(BO);

void TxnMgtByUsALT(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;
	int	iCnt = 0;
	int	iRecCnt = 0;
	int	i = 0;
	char	csTag[PD_TAG_LEN+1];
	char	*csType;
	char	*csValue;
	char	*csField;
	double	dValue = 0.0;
	int	iValue = 0;
	char	*csValueTag;

	char	*csHandler;
	char	*csChannel;

	char	*csPath;
	char	*csTplName;
	char	*csEmailSubject;
	char	*csEmailFrom;
	char	*csEmailTo;
	char	*csEmailCc;
	char	*csEmailBcc;

	hash_t          *hRec;
	recordset_t     *rRecordSet;
	rRecordSet = (recordset_t *)malloc(sizeof(recordset_t));
	recordset_init(rRecordSet, 0);
	
	if(GetField_Int(hRequest,"total_dyn",&iCnt)){
		PutField_Int(hContext,"total_dyn",iCnt);
DEBUGLOG(("Authorize::total_dyn = [%d]\n",iCnt));
	}

	//Call DB to check if alert need or not
	if(GetField_CString(hRequest,"handler",&csHandler)){
DEBUGLOG(("Handler = [%s]\n",csHandler));
	}

	if(GetField_CString(hRequest,"channel",&csChannel)){
DEBUGLOG(("Channel = [%s]\n",csChannel));
	}

	//Call DB to check if alert need or not
	DBObjPtr = CreateObj(DBPtr,"DBSystemAlert","GetSystemAlertRec");
	if ((*DBObjPtr)(csHandler, csChannel, rRecordSet) == PD_OK) {

		hRec = RecordSet_GetFirst(rRecordSet);
		while (hRec) {
			if (GetField_CString(hRec,"path",&csPath)) {
				PutField_CString(hContext,"path",csPath);
DEBUGLOG(("ValidateProcess::GetSystemAlert::path = [%s]\n",csPath));
			}

			if (GetField_CString(hRec,"tpl_name",&csTplName)) {
				PutField_CString(hContext,"tpl_name",csTplName);
DEBUGLOG(("ValidateProcess::GetSystemAlert::tpl_name = [%s]\n",csTplName));
			}

			if (GetField_CString(hRec,"email_subject",&csEmailSubject)) {
				PutField_CString(hContext,"email_subject",csEmailSubject);
DEBUGLOG(("ValidateProcess::GetSystemAlert::email_subject = [%s]\n",csEmailSubject));
			}

			if (GetField_CString(hRec,"email_from",&csEmailFrom)) {
				PutField_CString(hContext,"email_from",csEmailFrom);
DEBUGLOG(("ValidateProcess::GetSystemAlert::email_from = [%s]\n",csEmailFrom));
			}

			if (GetField_CString(hRec,"email_to",&csEmailTo)) {
				PutField_CString(hContext,"email_to",csEmailTo);
DEBUGLOG(("ValidateProcess::GetSystemAlert::email_to = [%s]\n",csEmailTo));
			}

			if (GetField_CString(hRec,"email_cc",&csEmailCc)) {
				PutField_CString(hContext,"email_cc",csEmailCc);
DEBUGLOG(("ValidateProcess::GetSystemAlert::email_cc = [%s]\n",csEmailCc));
			}

			if (GetField_CString(hRec,"email_bcc",&csEmailBcc)) {
				PutField_CString(hContext,"email_bcc",csEmailBcc);
DEBUGLOG(("ValidateProcess::GetSystemAlert::email_bcc = [%s]\n",csEmailBcc));
			}

			iRecCnt++;
			hRec = RecordSet_GetNext(rRecordSet);
		}
	}
	else {
		iRet = INT_ERR;
		PutField_Int(hContext,"internal_error",iRet);
DEBUGLOG(("ValidateProces::GetSystemAlertRec:: failed\n"));
ERRLOG("BOAlertEmail::ValidateProcess::GetSystemAlertRec:: failed!!\n");
	}

	if(iRecCnt>0)
	{
		for(i=0; i<iCnt; i++){
			sprintf(csTag,"%d_tagname",i);
			if(GetField_CString(hRequest,csTag,&csField)){
				PutField_CString(hContext,csTag,csField);
DEBUGLOG(("Authorize:: [%s] = [%s]\n",csTag,csField));
			}

			sprintf(csTag,"%d_type",i);
			if(GetField_CString(hRequest,csTag,&csType)){
				PutField_CString(hContext,csTag,csType);
DEBUGLOG(("Authorize:: [%s] = [%s]\n",csTag,csType));
			}

			sprintf(csTag,"%d_value",i);
			if (!strcmp(csType,PD_INT_TYPE)) {
				if(GetField_Int(hRequest,csTag,&iValue)){
					PutField_Int(hContext,csField,iValue);
DEBUGLOG(("Authorize:: [%s][%s] = [%d]\n",csTag,csField,iValue));
				}
			}
			else if (!strcmp(csType,PD_DOUBLE_TYPE)) {
				if(GetField_Double(hRequest,csTag,&dValue)){
					PutField_Double(hContext,csField,dValue);
DEBUGLOG(("Authorize:: [%s][%s] = [%lf]\n",csTag,csField,dValue));
				}
			}
			else if (!strcmp(csType,PD_STRING_TYPE)) {
				if(GetField_CString(hRequest,csTag,&csValue)){
					PutField_CString(hContext,csField,csValue);
DEBUGLOG(("Authorize:: [%s][%s] = [%s]\n",csTag,csField,csValue));
				}
			}

			sprintf(csTag,"%d_vtag",i);
			if(GetField_CString(hRequest,csTag,&csValueTag)){
				PutField_CString(hContext,csTag,csValueTag);
DEBUGLOG(("Authorize:: [%s] = [%s]\n",csTag,csValueTag));
			}
	
DEBUGLOG(("Authorize:: Cnt[%d]\n",i));
			//BO

		}

		//BO
		BOObjPtr = CreateObj(BOPtr,"BOAlertEmail","ProcessTpl");
		if((unsigned long)((*BOObjPtr)(hContext) != PD_OK)){
			iRet=INT_CODE_ERROR;
			PutField_Int(hContext,"internal_error",iRet);
DEBUGLOG(("Authorize::ProcessTpl Failed\n"));
ERRLOG("TxnMgtByUsALT::Authorize::ProcessTpl Failed, iRet=%d\n", iRet);
                }
		else
		{	
DEBUGLOG(("Authorize::ProcessTpl Success\n"));
		}	

	} else {
DEBUGLOG(("Authorize:: No record found in System_Alerts, normal exit\n"));
	}

	RecordSet_Destroy(rRecordSet);
	FREE_ME(rRecordSet);

DEBUGLOG(("TxnMgtByUsALT Normal Exit() iRet = [%d]\n",iRet));
	return iRet;
}
