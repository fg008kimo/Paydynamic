#define    PD_SETTLEMENT_PREVIEW_CMD	"handle_daily_float_2AFPO.exec -d"

char cDebug;
OBJPTR(DB);

void TxnMgtByUsRLP(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                  const hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;
	char	*csUser;
	char	*csMode;
	char	*csCmd;

DEBUGLOG(("Authorize\n"));

	if (GetField_CString(hRequest, "add_user", &csUser)) {
DEBUGLOG(("Authorize::add_user= [%s]\n",csUser));
		PutField_CString(hContext,"update_user",csUser);
        }

	if (GetField_CString(hRequest, "req_mode", &csMode)) {
DEBUGLOG(("Authorize::req_mode = [%s]\n",csMode));
	}
	else {
		iRet = INT_INVALID_TXN;
                PutField_Int(hContext,"internal_error",iRet);
DEBUGLOG(("Authorize::() req_mode is missing\n"));
ERRLOG("TxnMgtOnUSRLP:Authorize() req_mode is missing\n");
	}

	if (iRet == PD_OK) {
		csCmd = (char *) malloc(PD_MAX_FILE_LEN + 1);


		if (!strcmp(csMode, PD_RLS_SETT_MODE_PREVIEW)) { 
			sprintf(csCmd, "%s %c", PD_SETTLEMENT_PREVIEW_CMD, PD_YES);
		} else if (!strcmp(csMode, PD_RLS_SETT_MODE_CUTOFF)) {
			sprintf(csCmd, "%s %c", PD_SETTLEMENT_PREVIEW_CMD, PD_NO);
		}
		
DEBUGLOG(("Authorize::() process command [%s]\n", csCmd));
		system(csCmd);

		FREE_ME(csCmd);
	}


DEBUGLOG(("TxnMgtByUsRLP Normal Exit() iRet = [%d]\n",iRet));
	return iRet;
}
