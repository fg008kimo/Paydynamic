#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include "common.h"
#include "utilitys.h"
#include "ObjPtr.h"
#include "internal.h"
#include "TxnOiaByUsESB.h"
#include "myrecordset.h"
#include <curl/curl.h>
#include "queue_utility.h"
#include "mq_db.h"

static char cDebug;
OBJPTR(DB);
OBJPTR(BO);

void TxnOiaByUsESB(char    cdebug)
{
	cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                  const hash_t* hRequest,
                        hash_t* hResponse)
{

	int	iRet = PD_OK;

	char	*csBAID = NULL; 
	char	*csStatus = NULL;

	char	*csBankCode = NULL;
	char	*csBankName = NULL;
	char	*csAcctNum = NULL;
	char	*csPspId = NULL;

	char	*csBankAcctType = NULL;
	char	*csBankAcctStatus = NULL;


	char	*csClientId = NULL;
	char	*csClientName = NULL;
	char	*csBankAcctOwnerName = NULL;

	hash_t  *hTxn;
	hTxn = (hash_t*) malloc (sizeof(hash_t));
	hash_init(hTxn, 0);

DEBUGLOG(("TxnOiaByUsESB::Authorize\n"));

/* baid */
	if (GetField_CString(hRequest, "baid", &csBAID)) {
		PutField_CString(hResponse, "baid", csBAID);
DEBUGLOG(("Get Details of baid [%s]\n", csBAID));
	} 


	if (iRet == PD_OK) {
		//get the BAID record
DEBUGLOG(("Call DBOLBankAcctId:GetBankAcctIdDtl\n"));
		DBObjPtr = CreateObj(DBPtr,"DBOLBankAcctId","GetBankAcctIdDtl");
		if ((unsigned long)(*DBObjPtr)(csBAID, hTxn) != PD_OK) {
			iRet = INT_ERR;
			PutField_Int(hContext,"internal_error",iRet);
DEBUGLOG(("DBOLBankAcctId:GetBankAcctIdDtl Failed!\n"));
ERRLOG("TxnOiaByUsESB::DBOLBankAcctId:GetBankAcctIdDtl Failed!\n");
		} else {
			if (GetField_CString(hTxn, "status", &csStatus)) {
				PutField_CString(hResponse, "baid_status", csStatus);
DEBUGLOG((" status [%s]\n", csStatus));
			}

			if (GetField_CString(hTxn, "psp_id", &csPspId)) {
DEBUGLOG((" psp_id [%s]\n", csPspId));
			}

			if (GetField_CString(hTxn, "int_bank_code", &csBankCode)) {
DEBUGLOG((" bank_code [%s]\n", csBankCode));
			}

			if (GetField_CString(hTxn, "bank_acct_num", &csAcctNum)) {
				PutField_CString(hResponse, "acct_num", csAcctNum);
DEBUGLOG((" acct_num [%s]\n", csAcctNum));
			}
	
		}
	}

	if (iRet == PD_OK) {
DEBUGLOG(("Call BankDesc:GetBankDetail\n"));
		hash_destroy(hTxn);
		hash_init(hTxn,0);
		DBObjPtr = CreateObj(DBPtr,"DBBankDesc","GetBankDetail");
		if ((unsigned long)(*DBObjPtr)(csBankCode, hTxn) != PD_OK) {
			iRet = INT_ERR;
DEBUGLOG(("Call BankDesc:GetBankDetail Failed\n"));
ERRLOG("TxnOiaByUsESB::Call BankDesc:GetBankDetail Failed\n");
		}
		else {
			if (GetField_CString(hTxn, "bank_name", &csBankName)) {
				PutField_CString(hResponse, "bank_name", csBankName);
DEBUGLOG((" Bank Name [%s]\n", csBankName));
			}
		}
	}

	if (iRet == PD_OK) {
		/* Check Bank Account Exists */
DEBUGLOG(("Call DBOLBankAccts:GetBankAccts\n"));
		hash_destroy(hTxn);
		hash_init(hTxn,0);

		DBObjPtr = CreateObj(DBPtr,"DBOLBankAccts","GetBankAccts");
		if ((unsigned long)(*DBObjPtr)(csBankCode, csAcctNum, hTxn) != PD_OK) {
			iRet = INT_ERR;
			PutField_Int(hContext,"internal_error",iRet);
		} else {
			if (GetField_CString(hTxn, "acct_type", &csBankAcctType)) {
				//PutField_CString(hResponse, "bank_nature", csBankAcctType);
DEBUGLOG((" Bank Acct Type [%s]\n", csBankAcctType));
			}

			if (GetField_CString(hTxn, "owner_name", &csBankAcctOwnerName)) {
				PutField_CString(hResponse, "owner_name", csBankAcctOwnerName);
DEBUGLOG((" Bank Acct Owner Name [%s]\n", csBankAcctOwnerName));
			}

			if (GetField_CString(hTxn, "status_type", &csBankAcctStatus)) {
				PutField_CString(hResponse, "acct_status", csBankAcctStatus);
DEBUGLOG((" Bank Acct Satus [%s]\n", csBankAcctStatus));
			}

		}

		if (iRet == PD_OK) {
			/* Get PSP Exists */
DEBUGLOG(("Call DBOLPspDetail:GetPspDetail\n"));
			hash_destroy(hTxn);
			hash_init(hTxn,0);
			DBObjPtr = CreateObj(DBPtr,"DBOLPspDetail","GetPspDetail");
			if ((unsigned long)(*DBObjPtr)(csPspId, hTxn) != PD_OK) {
				iRet = INT_ERR;
DEBUGLOG(("Call DBOLPspDetail:GetPspDetail Failed\n"));
ERRLOG("TxnOiaByUsESB::Call DBOLPspDetail:GetPspDetail Failed\n");
			}
			else {
				if (GetField_CString(hTxn, "client_id", &csClientId)) {
DEBUGLOG((" client_id [%s]\n", csClientId)); 
				}
				if (GetField_CString(hTxn, "bank_acct_type", &csBankAcctType)) {
					PutField_CString(hResponse, "bank_nature", csBankAcctType);
DEBUGLOG((" Bank Acct Type [%s]\n", csBankAcctType)); 
				}
			}
		}


		/* Get Provider */
		if (iRet == PD_OK) {
			hash_destroy(hTxn);
			hash_init(hTxn,0);

DEBUGLOG(("Call DBPspMaster:GetPspMaster\n"));
			DBObjPtr = CreateObj(DBPtr, "DBPspMaster", "GetPspMaster");
			if ((unsigned long)(*DBObjPtr)(csClientId, hTxn) != PD_OK) {
				iRet = INT_ERR;
DEBUGLOG(("Call DBPspMaster:GetPspMaster Failed\n"));
ERRLOG("TxnOiaByUsESB::Call DBPspMaster:GetPspMaster Failed\n");
			} else {
				if (GetField_CString(hTxn, "client_name", &csClientName)) {
					PutField_CString(hResponse, "prov_name", csClientName);
DEBUGLOG((" Provider Name [%s]\n", csClientName));
				}
			}
		}

	}
	hash_destroy(hTxn);
	FREE_ME(hTxn);



DEBUGLOG(("TxnOiaByUsESB Normal Exit() iRet = [%d]\n",iRet));
	return iRet;
}

