int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;

        char    *csNodeId = NULL;

        char    *csMmsNodeId = NULL;
        char    *csMmsKey = NULL;

        char    cNodeType;
        char    csTag[PD_TAG_LEN + 1];

        hash_t  *hRec;
        recordset_t     *rRecordSet;
        rRecordSet = (recordset_t*) malloc (sizeof(recordset_t));
        recordset_init(rRecordSet,0);

        memset(csTag, 0, sizeof(csTag)); 

DEBUGLOG(("Authorize\n")); 

        if (GetField_CString(hContext, "node_id", &csNodeId)){
DEBUGLOG(("Authorize::node_id = [%s]\n",csNodeId));
        }
        else {
DEBUGLOG(("Authorize::node_id not found!!\n"));
ERRLOG("TxnMgtByUs2Host::Authorize::node_id not found!!\n");
                 iRet=INT_ERR;
        } 

        if (GetField_Char(hContext, "node_type", &cNodeType)){
DEBUGLOG(("Authorize::node_type = [%c]\n",cNodeType));
        }
        else {
DEBUGLOG(("Authorize::node_type not found!!\n"));
ERRLOG("TxnMgtByUs2Host::Authorize::node_type not found!!\n");
                 iRet=INT_ERR;
        } 


        if(iRet==PD_OK){
DEBUGLOG(("Authorize::Call MmsKeys:GetMmsClientKey\n"));
                DBObjPtr = CreateObj(DBPtr,"DBMmsKeys","GetMmsClientKey");

                if ((unsigned long)(*DBObjPtr)(csNodeId, rRecordSet) == PD_OK){
DEBUGLOG(("Authorize::DBMmsKeys:GetMmsClientKey record found\n"));

                        hRec = RecordSet_GetFirst(rRecordSet);
                        while (hRec) {
                                if (GetField_CString(hRec, "mms_key", &csMmsKey)) {
                                        PutField_CString(hContext, "mms_key", csMmsNodeId);
                                } 
                                else {
                                        iRet=INT_ERR; 
                                        break; 
                                }

                                hRec = RecordSet_GetNext(rRecordSet);
                        }
                } 
                else {
                        iRet = INT_NOT_RECORD;
DEBUGLOG(("GetMMsClientKey::not found record\n"));
ERRLOG("TxnMgtByUs2Host::Authorize::DBMmsKeys:GetMmsClientKey: Unable to find record\n");
                }
                RecordSet_Destroy(rRecordSet);
        }


        if(iRet!=PD_OK){
                PutField_Int(hContext,"internal_error",iRet);
        }


        RecordSet_Destroy(rRecordSet);
        FREE_ME(rRecordSet);


DEBUGLOG(("TxnMgtByUs2Host Normal Exit() iRet = [%d]\n",iRet));
        return iRet;
}
