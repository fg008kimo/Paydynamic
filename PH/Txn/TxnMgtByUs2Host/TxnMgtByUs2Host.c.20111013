#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <ctype.h>
#include "common.h"
#include "utilitys.h"
#include "ObjPtr.h"
#include "internal.h"
#include "TxnMgtByUs2Host.h"
#include "myrecordset.h"
#include <curl/curl.h>
#include "queue_utility.h"
#include "mq_db.h"

char cDebug;
OBJPTR(DB);
OBJPTR(BO);
OBJPTR(Channel);

void TxnMgtByUs2Host(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;

        char    *csMmsMode = strdup("");
        char    *csNodeId = strdup("");
        char    *csMmsKey = strdup("");
        char    cNodeType;


        hash_t  *hRec;
        recordset_t     *rRecordSet;
        rRecordSet = (recordset_t*) malloc (sizeof(recordset_t));
        recordset_init(rRecordSet,0);


        //Chk System Parameter
DEBUGLOG(("Authorize::Call DBSystemParameter:FindCode:MMSMODE\n"));

        DBObjPtr = CreateObj(DBPtr,"DBSystemParameter","FindCode");
        if ((unsigned long)(DBObjPtr)(PD_MMSMODE,csMmsMode) == FOUND) {
DEBUGLOG(("FindCode MMs Mode  = [%s]\n",csMmsMode));
                PutField_CString(hContext,"mms_mode",csMmsMode);
        }
        else {
                iRet = INT_ERR;
DEBUGLOG(("FindCode:Unable to find MMSMode\n"));
ERRLOG("TxnMgtByUs2Host::SystemParameter:FindCode:Unable to find MMSMode\n");
        }        

        // Only handle while MmsMode is Enabled

        if((iRet==PD_OK) && (!strcmp(csMmsMode, PD_ENABLE_MMSMODE))){

DEBUGLOG(("Authorize::Call DBSystemParameter:FindCode:MMCID\n"));
                DBObjPtr = CreateObj(DBPtr,"DBSystemParameter","FindCode");
                if ((unsigned long)(DBObjPtr)(PD_MMCID,csNodeId) == FOUND) {
DEBUGLOG(("FindCode Node id = [%s]\n",csNodeId));
                        PutField_CString(hContext,"node_id",csNodeId);
                }
                else {
                        iRet = INT_ERR;
DEBUGLOG(("FindCode:Unable to find NodeId\n"));
ERRLOG("TxnMgtByUs2Host::SystemParameter:FindCode:Unable to find NodeId\n");
                }


                if(iRet==PD_OK){
DEBUGLOG(("Authorize::Call MmxNodes:Find\n"));
                        DBObjPtr = CreateObj(DBPtr,"DBMmxNodes","Find");
                        if ((unsigned long)(DBObjPtr)(csNodeId, &cNodeType) == PD_OK){

DEBUGLOG(("Find Node Type = [%c]\n",cNodeType));
                                PutField_Char(hContext,"node_type", cNodeType);
                        } 
                        else {
                                iRet = INT_ERR;
DEBUGLOG(("Find:Unable to find Node Type\n"));
ERRLOG("TxnMgtByUs2Host::DBMmxNodes:Find: Unable to find Node Type\n");
                        }

                }



                if((iRet==PD_OK) && (cNodeType == PD_MMS_CLIENT)) {
DEBUGLOG(("Authorize::Call MmsKeys:GetMmsKey\n"));
                        DBObjPtr = CreateObj(DBPtr,"DBMmsKeys","GetMmsKey");
                        if ((unsigned long)(DBObjPtr)(csNodeId, rRecordSet) == PD_OK){
DEBUGLOG(("GetMmsKey::find MMS Key Node Id = [%s]\n", csNodeId));
                                hRec = RecordSet_GetFirst(rRecordSet);
                                while (hRec) {
                                        if (GetField_CString(hRec, "mms_key", &csMmsKey)) {
DEBUGLOG(("GetMmsKey::mms_key =[%s]\n", csMmsKey));
                                                PutField_CString(hContext,"mms_key",csMmsKey);
                                        }
                                        hRec = RecordSet_GetNext(rRecordSet);
                                }
                        } 
                        else {
                                iRet = INT_NOT_RECORD;
DEBUGLOG(("GetMMsKey::not found record for [%s]\n", csNodeId));
ERRLOG("TxnMgtByUs2Host::Authorize::DBMmsKeys:GetMmsKey: Unable to find record\n");
                        }
                        RecordSet_Destroy(rRecordSet);
                }


        }        


        if(iRet!=PD_OK){
                PutField_Int(hContext,"internal_error",iRet);
        }


        RecordSet_Destroy(rRecordSet);
        FREE_ME(rRecordSet);

        FREE_ME(csMmsMode);
        FREE_ME(csNodeId);
        FREE_ME(csMmsKey);


DEBUGLOG(("TxnMgtByUs2Host Normal Exit() iRet = [%d]\n",iRet));
        return iRet;
}
