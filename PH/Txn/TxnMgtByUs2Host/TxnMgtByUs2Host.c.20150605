char cDebug;
OBJPTR(Msg);
OBJPTR(BO);
OBJPTR(DB);
OBJPTR(Txn);

void TxnMgtByUs2Host(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;


	long    lKey,lRspKey;
	struct 	msg_t *msg;
	hex_t   *h_msg;
        int     iSendLen,iRecvLen;
	char    *csTxnSeq;
	char*	csTxnCode;
	char*	csNodeId;
	char*   csProcessType;
        char*   csProcessCode;
	char*	csTxnDesc;

	char	csLocalDateTime[PD_DATETIME_LEN +1];
	char	*csPtr;
	double	dTmp;

	csProcessCode = (char*) malloc (PD_PROCESS_CODE_LEN +1 );
	csProcessType = (char*) malloc (PD_PROCESS_TYPE_LEN +1 );
        csTxnDesc = (char*) malloc (PD_DESC_LEN + 1);

DEBUGLOG(("Authorize\n")); 
         GetField_CString(hContext,"txn_seq",&csTxnSeq);
DEBUGLOG(("TxnMgtByUs2Host: txn_seq = [%s]\n",csTxnSeq));

         GetField_CString(hContext,"txn_code",&csTxnCode);
DEBUGLOG(("TxnMgtByUs2Host: txn_code = [%s]\n",csTxnCode));

        if(iRet!=PD_OK){
                PutField_Int(hContext,"internal_error",iRet);
        }
	else {
DEBUGLOG(("TxnMgtByUs2Host: try to format host Msg\n"));
		hash_t  *hReq;
        	hReq = (hash_t*) malloc (sizeof(hash_t));
        	hash_init(hReq,0);

/* process type & process code*/
		DBObjPtr = CreateObj(DBPtr,"DBMmsTxnCode","FindProcessCode");
                if (!(*DBObjPtr)(csTxnCode,
                                 csTxnDesc,
				 csProcessType,
				 csProcessCode)) {
                        iRet = INT_INVALID_TXN;
                        PutField_Int(hContext,"internal_error",INT_INVALID_TXN);
DEBUGLOG(("process_txn:Can't Find ProcessCode\n"));
ERRLOG("MMSChannel:Unsupported transaction [%s]\n",csTxnCode);
                }
                else {
                        PutField_CString(hReq,"process_code",csProcessCode);
                        PutField_CString(hReq,"process_type",csProcessType);
DEBUGLOG(("process_txn:ProcessType = [%s]\n",csProcessType));
DEBUGLOG(("process_txn:ProcessCode = [%s]\n",csProcessCode));
                }

/* txn amt */
		if (GetField_Double(hContext,"txn_amt",&dTmp)) {
DEBUGLOG(("TxnMgtByUs2Host: Txn Amt = [%lf]\n",dTmp));
			PutField_Double(hReq,"txn_amt",dTmp);
		}
/* node id */
		if (GetField_CString(hContext,"node_id",&csNodeId)) {
DEBUGLOG(("TxnMgtByUs2Host: node id  = [%s]\n",csNodeId));
			//PutField_CString(hReq,"mmc_node_id",csNodeId);
			PutField_CString(hReq,"mms_node_id",csNodeId);
		}
/* mms key */
		if (GetField_CString(hContext,"mms_key",&csPtr)) {
DEBUGLOG(("TxnMgtByUs2Host: mms_key  = [%s]\n",csPtr));
			PutField_CString(hReq,"mms_key",csPtr);
		}
/* txn ccy */
		if (GetField_CString(hRequest,"txn_ccy",&csPtr)) {
DEBUGLOG(("TxnMgtByUs2Host: txn_ccy  = [%s]\n",csPtr));
			PutField_CString(hReq,"txn_ccy",csPtr);
		}
/* psp_id */
		if (GetField_CString(hRequest,"psp_id",&csPtr)) {
DEBUGLOG(("TxnMgtByUs2Host: psp_id  = [%s]\n",csPtr));
			PutField_CString(hReq,"psp_id",csPtr);
		}
/* merchant_id */
		if (GetField_CString(hRequest,"merchant_id",&csPtr)) {
DEBUGLOG(("TxnMgtByUs2Host: merchant_id  = [%s]\n",csPtr));
			PutField_CString(hReq,"merchant_id",csPtr);
		}
/* txn_seq */
		if (GetField_CString(hContext,"txn_seq",&csPtr)) {
DEBUGLOG(("TxnMgtByUs2Host: txn_seq  = [%s]\n",csPtr));
			PutField_CString(hReq,"txn_id",csPtr);
		}
/* local tm date */
		if (GetField_CString(hContext,"local_tm_date",&csPtr)) {
			strcpy(csLocalDateTime,csPtr);
DEBUGLOG(("TxnMgtByUS2Host:: local_tm_date = [%s]\n",csPtr));
                }
/* local tm time */
                if (GetField_CString(hContext,"local_tm_time",&csPtr)) {
			memcpy(&csLocalDateTime[PD_DATE_LEN],csPtr,PD_TIME_LEN);
			csLocalDateTime[PD_DATETIME_LEN] = '\0';
                        PutField_CString(hReq,"transmission_datetime",csLocalDateTime);
DEBUGLOG(("TxnMgtByUS2Host:: local_tm_date = [%s]\n",csPtr));
                }
/* service_code */
		if (GetField_CString(hRequest,"service_code",&csPtr)) {
DEBUGLOG(("TxnMgtByUs2Host: service_code  = [%s]\n",csPtr));
			PutField_CString(hReq,"service_code",csPtr);
		}

/* init_channel */
		PutField_CString(hReq, "init_channel", PD_CHANNEL_MGT);
/* carry_forward_ind */
		PutField_Int(hReq, "cf_ind", PD_TRUE);

		MsgObjPtr = CreateObj(MsgPtr,"MmsMsg","BuildAuthData");
                if ((*MsgObjPtr)(hReq) == PD_OK) {
DEBUGLOG(("Build\n"));
/* version_no */
			PutField_CString(hReq,"version_no","1");
/* md5 */
			PutField_CString(hReq,"encrypt_type",PD_ENC_TYPE_MD5);
			BOObjPtr = CreateObj(BOPtr,"BOSecurity","GenerateMMSMac");
                	if ((*BOObjPtr)(hContext,hReq,hReq) == PD_OK) {
				char csQueueName[PD_QUEUE_LEN +1];
				sprintf(csQueueName,"MMS%sRSPQ",csNodeId);
/* Request Host Queue */
				lKey = GetMQKey((const unsigned char *)"MMSREQQ");
/* Client Response Queue */
                		lRspKey = GetMQKey((const unsigned char *)csQueueName);

				MsgObjPtr = CreateObj(MsgPtr,"MmsMsg","FormatMsg");

				h_msg = (hex_t*) malloc (sizeof(hex_t));
                		if ((*MsgObjPtr)(hReq,h_msg->msg,&h_msg->len) == PD_OK) {
                			msg = (struct msg_t*)malloc(sizeof(struct msg_t)+MAX_MSG_SIZE);
                			msg->mtype  = ctol((const unsigned char *)csTxnSeq,strlen(csTxnSeq));
                			memset(msg->mtext,0,sizeof(msg->mtext));
                			MQ_build_header((unsigned char*)msg->mtext,
                			MQ_RESP,
                			"MMS",
                			0,
                			csQueueName,
                			0);
                			memcpy(&msg->mtext[MQ_HEADER_LEN],h_msg->msg,h_msg->len);
                			msg->mtext[MQ_HEADER_LEN + h_msg->len] = '\0';
                 			iSendLen = MQ_HEADER_LEN + h_msg->len;
DEBUGLOG(("Request Queue = [MMSREQQ] Response Queue = [%s]\n",csQueueName));
DEBUGLOG(("send msg = [%s] send len = [%d]\n",msg->mtext,iSendLen));
DEBUGLOG(("rspkey = [%ld][%ld]\n",lRspKey,msg->mtype));
					if (MQSend(lKey,msg,iSendLen) != MQ_OK ) {
DEBUGLOG(("Sent Error\n"));     
                                		iRet = PD_ERR;
                        		}
                        		else {  
                                		memset(msg->mtext,0,sizeof(msg->mtext));
                                		if (MQRecv(lRspKey,msg,&iRecvLen,2) != MQ_OK ) {
DEBUGLOG(("recv Error\n"));             
							TxnObjPtr = CreateObj(TxnPtr,"TxnMmsByUsRCK","Authorize");
                					iRet = (unsigned long)(*TxnObjPtr)(hContext,hReq,hReq);
                                		}
                                		else {  
                                       		 	msg->mtext[iRecvLen] = '\0';
DEBUGLOG(("TxnMgtByUs2Host:  recv len = [%d]\n",iRecvLen));
                                       		 	memcpy(h_msg->msg,&msg->mtext[MQ_HEADER_LEN],iRecvLen - MQ_HEADER_LEN);
						}
                                	}
		
                       		 	FREE_ME(msg);
				}
				FREE_ME(h_msg);
			}
		}
		FREE_ME(hReq);
	}

DEBUGLOG(("TxnMgtByUs2Host Normal Exit() iRet = [%d]\n",iRet));
	FREE_ME(csTxnDesc);
	FREE_ME(csProcessCode);
	FREE_ME(csProcessType);
	
        return iRet;
}
