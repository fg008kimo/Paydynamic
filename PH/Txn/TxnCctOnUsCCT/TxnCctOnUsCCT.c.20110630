int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
	int	iRet = PD_OK;
	char*	csRedirectUrl;
	char*	csEncryptUrl;
	char*	csEncryptFunction;
	
DEBUGLOG(("TxnCctOnUsCCT()\n"));
	
        if (iRet == PD_OK) {
                char*   csValueTmp;
                csValueTmp = (char*) malloc (128);
                DBObjPtr = CreateObj(DBPtr,"DBSystemParameter","FindCode");
/* redirect url */
                if ((unsigned long)(DBObjPtr)("S_REDIRECT_URL",csValueTmp) == FOUND) {
DEBUGLOG(("UpdateContext::S_REDIRECT_URL  = [%s]\n",csValueTmp));
			csRedirectUrl = strdup(csValueTmp);
                }
                else {
ERRLOG("UpdateContext::Unable to find S_REDIRECT_URL\n");
                }

/* encrypt url */
                if ((unsigned long)(DBObjPtr)("S_ENCRYPT_URL",csValueTmp) == FOUND) {
DEBUGLOG(("UpdateContext::S_ENCRYPT_URL  = [%s]\n",csValueTmp));
			csEncryptUrl = strdup(csValueTmp);
                }
                else {
ERRLOG("UpdateContext::Unable to find S_ENCRYPT_URL\n");
                }

/* encrypt function */
                if ((unsigned long)(DBObjPtr)("S_ENCRYPT_FUNCTION",csValueTmp) == FOUND) {
DEBUGLOG(("UpdateContext::S_ENCRYPT_FUNCTION  = [%s]\n",csValueTmp));
			csEncryptFunction = strdup(csValueTmp);
                }
                else {
ERRLOG("UpdateContext::Unable to find S_ENCRYPT_FUNCTION\n");
                }
                FREE_ME(csValueTmp);
        }

/* redirect url */
	PutField_CString(hResponse,"redirect_url",csRedirectUrl);

/*post method*/
	PutField_CString(hResponse,"url_method",PD_GET_METHOD);
DEBUGLOG(("TxnCctOnUsCCT() exit = [%d]\n",iRet));

/*merchant id */
/* encrypt url */
	PutField_CString(hRequest,"psp_url",csEncryptUrl);
	PutField_CString(hRequest,"request_function",csEncryptFunction);
	PutField_CString(hRequest,"tot_token","0");
	PutField_CString(hRequest,"server_ip","202.175.89.123");
	PutField_CString(hRequest,"txn_msg","TESTING");

        TxnObjPtr = CreateObj(TxnPtr,"TxnWebOnUs2CCT","Authorize");
        iRet = (unsigned long)(*TxnObjPtr)(hContext,hRequest,hResponse);
DEBUGLOG(("TxnWebOnUsCCT::Authorize() iRet = [%d]\n",iRet));
	
	FREE_ME(csRedirectUrl);
	FREE_ME(csEncryptUrl);
	FREE_ME(csEncryptFunction);
	return	iRet;
}

int     Decrypt(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
	int	iRet = PD_OK;
	char*	csPtr;
	char*	csDecryptUrl;
	char*	csDecryptFunction;
	
DEBUGLOG(("TxnCctOnUsCCT() Decrypt\n"));
/* encrypt url */
        char*   csValueTmp;
        csValueTmp = (char*) malloc (128);
        if ((unsigned long)(DBObjPtr)("S_DECRYPT_URL",csValueTmp) == FOUND) {
DEBUGLOG(("UpdateContext::S_DECRYPT_URL  = [%s]\n",csValueTmp));
        	csDecryptUrl = strdup(csValueTmp);
        }
        else {
ERRLOG("UpdateContext::Unable to find S_DECRYPT_URL\n");
        }

/* encrypt function */
        if ((unsigned long)(DBObjPtr)("S_DECRYPT_FUNCTION",csValueTmp) == FOUND) {
DEBUGLOG(("UpdateContext::S_ENCRYPT_FUNCTION  = [%s]\n",csValueTmp));
        	csDecryptFunction = strdup(csValueTmp);
        }
        else {
ERRLOG("UpdateContext::Unable to find S_DECRYPT_FUNCTION\n");
        }
	PutField_CString(hRequest,"psp_url",csDecryptUrl);
	PutField_CString(hRequest,"request_function",csDecryptFunction);

        TxnObjPtr = CreateObj(TxnPtr,"TxnWebOnUs2CCT","Decrypt");
        iRet = (unsigned long)(*TxnObjPtr)(hContext,hRequest,hResponse);
DEBUGLOG(("TxnWebOnUsCCT::Decrypt() iRet = [%d]\n",iRet));
	if (iRet == PD_OK) {
		if (GetField_CString(hResponse,"merchant_ref",&csPtr)) {
			PutField_CString(hContext,"merchant_ref",csPtr);
        		TxnObjPtr = CreateObj(TxnPtr,"TxnCctOnUsACK","Authorize");
        		iRet = (unsigned long)(*TxnObjPtr)(hContext,hRequest,hResponse);
		}
	}
	FREE_ME(csValueTmp);
	FREE_ME(csDecryptUrl);
	FREE_ME(csDecryptFunction);
	return	iRet;
}
