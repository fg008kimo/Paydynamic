					}
				}
			}

		}
*/
	}
	else{
		iRet = INT_INVALID_TXN;
		PutField_Int(hContext,"internal_error",iRet);
DEBUGLOG(("Authorize: action is invalid!!!!\n"));

	}

	FREE_ME(hTxn);
	FREE_ME(csBatchId);
DEBUGLOG(("TxnOmtByUsRPB Normal Exit() iRet = [%d]\n",iRet));
        return iRet;
}
