int     Authorize(hash_t* hContext,
                        const hash_t* hRequest,
                        hash_t* hResponse)
{
  int     iRet = PD_OK;
	char*	csTmp = NULL;
//	int	iTmp;
//	char	cTmp;
//	double 	dTmp;
	hash_t	*hReq;
//	char* csLineCnt = NULL;
//	int iLineCnt;
//	int iLineTmp;
//	char csName[PD_TMP_MSG_BUF_LEN];

	hReq = (hash_t*) malloc (sizeof(hash_t));

	hash_init(hReq,0);

	DEBUGLOG(("TxnMgtOnUsJLA::Authorize()\n"));

		// jnl_id //
	if (GetField_CString(hRequest,"jnl_id",&csTmp)) {
		DEBUGLOG(("TxnMgtOnUsJLA::Authorize(): jnl_id = [%s]\n",csTmp));
		PutField_CString(hReq,"jnl_id",csTmp);
	}
	
		// approve_user //
	if (GetField_CString(hRequest,"approve_user",&csTmp)) {
		DEBUGLOG(("TxnMgtOnUsJLA::Authorize(): approve_user = [%s]\n",csTmp));
		PutField_CString(hReq,"approve_user",csTmp);
	}
	
	// Approve Journal Header
	DBObjPtr = CreateObj(DBPtr,"DBCrrJnlHeader","Approve");
	iRet = (unsigned long) ((*DBObjPtr)(hReq));			

	if(iRet==PD_OK) {
		DEBUGLOG(("TxnMgtOnUsJLA::CrrJnlHeader->Approve Success\n"));		
	} else {
		DEBUGLOG(("TxnMgtOnUsJLA::CrrJnlHeader->Approve Failed\n"));	
	}

	hash_destroy(hReq);
	FREE_ME(hReq);
	DEBUGLOG(("TxnMgtOnUsJLA::Authorize() Normal exit iret = [%d]\n",iRet));	
	return iRet;
}
