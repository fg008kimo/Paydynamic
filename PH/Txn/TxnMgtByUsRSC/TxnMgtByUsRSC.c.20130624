char cDebug;

void TxnMgtByUsRSC(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;

	int	iCheckBank = PD_FALSE;
	char    *csPspId;
	char    *csBankCode;
	char    *csUser;
	char    csCmd[PD_TMP_BUF_LEN*2 + 1];

DEBUGLOG(("Authorize\n"));


//psp_id
        if(GetField_CString(hRequest,"psp_id",&csPspId)){
DEBUGLOG(("Authorize::psp_id = [%s]\n",csPspId));
        }
	else{
		iRet = INT_PSP_ID_NOT_FOUND;
	}

//bank_code (optional)
        if(GetField_CString(hRequest,"bank_code",&csBankCode)){
		if(strlen(csBankCode)>0){
			iCheckBank = PD_TRUE;
DEBUGLOG(("Authorize::bank_code = [%s]\n",csBankCode));
		}
        }

//user
        if(GetField_CString(hRequest,"add_user",&csUser)){
DEBUGLOG(("Authorize::add_user= [%s]\n",csUser));
        }
	else{
		iRet = INT_INVALID_TXN;
	}

	if(iRet==PD_OK){
		if(iCheckBank){
			sprintf(csCmd,"reset_checkbank_cutoff.sh %s %s %s",csPspId,csBankCode,csUser);
DEBUGLOG(("Authorize::call reset check bank cut-off [%s]\n",csCmd));
		}
		else{
			sprintf(csCmd,"reset_checkpsp_cutoff.sh %s %s",csPspId,csUser);
DEBUGLOG(("Authorize::call reset check psp cut-off [%s]\n",csCmd));
		}
		iRet = system(csCmd);
		if(iRet!=PD_OK){
			iRet = INT_ERR;
			PutField_Int(hContext,"internal_error",iRet);
		}
	}

DEBUGLOG(("TxnMgtByUsRSC Normal Exit() iRet = [%d]\n",iRet));
        return iRet;
}
