int     Authorize(hash_t* hContext,
                        const hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;
	char	*csPtr;
	hash_t  *hTxn;
	double	dTmp;
	
	hTxn = (hash_t*)  malloc (sizeof(hash_t));
        hash_init(hTxn,0);

DEBUGLOG(("TxnOlnOnUsODD: Authroize()\n"));

/* txn seq */
	GetField_CString(hContext,"txn_seq",&csPtr);
DEBUGLOG(("TxnOlnOnUsODD: txn_seq = [%s]\n",csPtr));
	PutField_CString(hTxn,"txn_seq",csPtr);
	
/* txn code */
	PutField_CString(hTxn,"txn_code",PD_INITIAL_OLN_TXN_CODE);

/* txn amt */
	if (GetField_Double(hContext,"txn_amt",&dTmp)) {
DEBUGLOG(("TxnOlnOnUsODD: txn_amt = [%f]\n",dTmp));
		PutField_Double(hTxn,"display_amt",dTmp);
		PutField_Double(hTxn,"deposit_amt",dTmp);
	}
	DBObjPtr = CreateObj(DBPtr,"DBOLTransaction","Update");
        iRet = (unsigned long)(*DBObjPtr)(hTxn);

DEBUGLOG(("TxnOlnOnUsODD: iRet[%d} return from OLTransaction Update\n",iRet));
	if (iRet == PD_OK) {
		TxnObjPtr = CreateObj(TxnPtr,"TxnOlnOnUsODI","Authorize");
        	iRet = (unsigned long)(*TxnObjPtr)(hContext,hRequest,hResponse);
	}

	hash_destroy(hTxn);
        FREE_ME(hTxn);
DEBUGLOG(("Normal exit iret = [%d]\n",iRet));	
	return iRet;
}
