int     Authorize(hash_t* hContext,
                        const hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;
	char	*csPtr;
	hash_t  *hTxn;
	double	dTmp;
	char	cTmp;
	
	hTxn = (hash_t*)  malloc (sizeof(hash_t));
        hash_init(hTxn,0);

DEBUGLOG(("TxnOlnOnUsODD: Authroize()\n"));

/* txn seq */
	GetField_CString(hContext,"txn_seq",&csPtr);
DEBUGLOG(("TxnOlnOnUsODD: txn_seq = [%s]\n",csPtr));
	PutField_CString(hTxn,"txn_seq",csPtr);
	
/* txn code */
	PutField_CString(hTxn,"txn_code",PD_INITIAL_OLN_TXN_CODE);

/* txn amt */
	if (GetField_Double(hContext,"txn_amt",&dTmp)) {
DEBUGLOG(("TxnOlnOnUsODD: txn_amt = [%f]\n",dTmp));
		PutField_Double(hTxn,"display_amt",dTmp);
		PutField_Double(hTxn,"deposit_amt",dTmp);
	}

	DBObjPtr = CreateObj(DBPtr,"DBOLTransaction","Update");
        iRet = (unsigned long)(*DBObjPtr)(hTxn);

DEBUGLOG(("TxnOlnOnUsODD: iRet[%d} return from OLTransaction Update\n",iRet));


	if (iRet == PD_OK) {
/* cust_deposit_datetime */
		if (!GetField_CString(hRequest,"cust_deposit_datetime",&csPtr)) {
			char csDateTime[PD_DATETIME_LEN + 1];
			strcpy(csDateTime,getdatetime());
			csDateTime[PD_YYYYMMDDHHMM_LEN] = '\0';
			PutField_CString(hTxn,"cust_deposit_datetime",csDateTime);
			PutField_Int(hTxn,"cust_deposit_dt_prov",PD_FALSE);
		}

        	if (GetField_Char(hRequest, "deposit_flow", &cTmp)) {
DEBUGLOG(("TxnOlnOnUsODD: deposit_flow = [%c]\n", cTmp));
                	iRet = GetRequestBankInfo(hRequest, hTxn);
        	}

		if (iRet == PD_OK) {
			DBObjPtr = CreateObj(DBPtr,"DBOLTransaction","UpdateDetail");
			iRet = (unsigned long)(*DBObjPtr)(hTxn);

DEBUGLOG(("TxnOlnOnUsODD: iRet[%d} return from OLTransaction UpdateDetail\n",iRet));
		}
	}



	if (iRet == PD_OK) {
		TxnObjPtr = CreateObj(TxnPtr,"TxnOlnOnUsODI","Authorize");
        	iRet = (unsigned long)(*TxnObjPtr)(hContext,hRequest,hResponse);
	}

	hash_destroy(hTxn);
        FREE_ME(hTxn);
DEBUGLOG(("Normal exit iret = [%d]\n",iRet));	
	return iRet;
}



int     GetRequestBankInfo(const hash_t* hRequest, hash_t *hContext)
{
        int     iRet = PD_OK;

        char    *csMerchantId = NULL;
        char    *csCountry = NULL;
        char    *csCcy = NULL;
        char    *csAcctNum = NULL;
        char    *csPtr;

        hash_t  *hBankInfo;

        char    *csBankCode;

        hBankInfo = (hash_t*)  malloc (sizeof(hash_t));
        hash_init(hBankInfo,0);

        if (GetField_CString(hRequest,"bank_acct_num",&csAcctNum)) {
DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() bank_acct_num = [%s]\n",csAcctNum));

                if (GetField_CString(hRequest, "merchant_id", &csMerchantId)) {
DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() merchant_id = [%s]\n",csMerchantId));
                }
                if (GetField_CString(hRequest, "txn_country", &csCountry)) {
DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() txn_country = [%s]\n",csCountry));
                }
                if (GetField_CString(hRequest, "txn_ccy", &csCcy)) {
DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() txn_ccy= [%s]\n",csCcy));
                }

                DBObjPtr = CreateObj(DBPtr,"DBOLMerchantBankAcct","GetBeneficiaryBank");
                if ((unsigned long)(*DBObjPtr)(csMerchantId, csCountry, csCcy, csAcctNum, PD_AC_ACTION_DEPOSIT_API_REQ, hBankInfo) != PD_OK) {
DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() Failed to get bank acct for merchant!!!!\n"));
                        iRet = INT_BANK_ACCT_NOT_AVAILABLE;
                        PutField_Int(hContext,"internal_error",iRet);
                } else {

                        if (GetField_CString(hBankInfo, "int_bank_code", &csPtr)) {
DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() int_bank_code [%s]\n", csPtr));
                                PutField_CString(hContext, "bank_code", csPtr);
                        }
                        if (GetField_CString(hBankInfo, "bank_name", &csPtr)) {
                                PutField_CString(hContext, "bank_name", csPtr);
                        }
                }
        }

        if (iRet == PD_OK) {

                csBankCode = (char*) malloc (PD_BANK_CODE_LEN + 1);

                if (GetField_CString(hRequest, "deposit_bank", &csPtr)) {
                        DBObjPtr = CreateObj(DBPtr,"DBOLDepositRequest","GetDepositBankCode");
                        if ((unsigned long)(*DBObjPtr)(csPtr, csBankCode) == PD_FOUND) {
DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() deposit_bank_code [%s]\n", csBankCode));
                                PutField_CString(hContext, "deposit_bank_code", csBankCode);
                        }
                        else {
                                PutField_CString(hContext, "deposit_bank_code", PD_OTHER_BANK_CODE);
                        }
                }

                FREE_ME(csBankCode);
        }

        hash_destroy(hBankInfo);
        FREE_ME(hBankInfo);

DEBUGLOG(("TxnOlnOnUsODD::GetRequestBankInfo() Normal exit iret = [%d]\n",iRet));
        return iRet;
}

