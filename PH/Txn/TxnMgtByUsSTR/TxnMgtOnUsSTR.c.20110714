	hash_t  *hReq;
	hReq = (hash_t*) malloc (sizeof(hash_t));
	hash_init(hReq,0);


	if(GetField_CString(hContext,"txn_seq",&csTmp)){
DEBUGLOG(("Authorize::txn_seq= [%s]\n",csTmp));
		PutField_CString(hResponse,"org_txn_seq",csTmp);
		PutField_CString(hContext,"txn_seq",csTmp);
		PutField_CString(hReq,"txn_seq",csTmp);
	}
	else{
DEBUGLOG(("Authorize::txnid not found!!\n"));
		iRet=PD_INTERNAL_ERR;
	}

	
	if(GetField_CString(hRequest,"add_user",&csTmp)){
DEBUGLOG(("Authorize::add_user= [%s]\n",csTmp));
		PutField_CString(hReq,"add_user",csTmp);
		PutField_CString(hContext,"add_user",csTmp);
		PutField_CString(hContext,"update_user",csTmp);
	}
	else{
		PutField_CString(hReq,"add_user",PD_UPDATE_USER);
		PutField_CString(hContext,"update_user",PD_UPDATE_USER);
	}

	if(GetField_CString(hRequest,"mid",&csTmp)){
DEBUGLOG(("Authorize::mid= [%s]\n",csTmp));
		PutField_CString(hContext,"merchant_id",csTmp);
		PutField_CString(hRequest,"merchant_id",csTmp);
		PutField_CString(hReq,"merchant_id",csTmp);
	}
	else{
DEBUGLOG(("Authorize::mid not found!!\n"));
		iRet=INT_MERCHANT_ID_NOT_FOUND;
		PutField_Int(hContext,"internal_error",iRet);
	}

	if(GetField_CString(hRequest,"ccy",&csTmp)){
DEBUGLOG(("Authorize::ccy= [%s]\n",csTmp));
		PutField_CString(hResponse,"txn_ccy",csTmp);
		PutField_CString(hRequest,"txn_ccy",csTmp);
		PutField_CString(hContext,"txn_ccy",csTmp);
		PutField_CString(hReq,"txn_ccy",csTmp);
	}
	else{
DEBUGLOG(("Authorize::ccy not found!!\n"));
		iRet=INT_CURRENCY_CODE_NOT_FOUND;
		PutField_Int(hContext,"internal_error",iRet);
	}

	if(GetField_CString(hRequest,"country",&csTmp)){
DEBUGLOG(("Authorize::country= [%s]\n",csTmp));
		PutField_CString(hContext,"txn_country",csTmp);
		PutField_CString(hRequest,"txn_country",csTmp);
		PutField_CString(hReq,"txn_country",csTmp);
	}
	else{
DEBUGLOG(("Authorize::country not found!!\n"));
		iRet=INT_TXN_COUNTRY_NOT_FOUND;
		PutField_Int(hContext,"internal_error",iRet);
	}

	if(GetField_CString(hRequest,"service_code",&csTmp)){
DEBUGLOG(("Authorize::sevice_code= [%s]\n",csTmp));
		PutField_CString(hContext,"service_code",csTmp);
		PutField_CString(hRequest,"service_code",csTmp);
		PutField_CString(hReq,"service_code",csTmp);
	}

	if(GetField_Double(hContext,"txn_amt",&dTmp)){
		PutField_Double(hReq,"txn_amt",dTmp);
		PutField_Double(hContext,"txn_amt",dTmp);
		PutField_Double(hContext,"net_amt",dTmp);
		PutField_Double(hResponse,"txn_amt",dTmp);
DEBUGLOG(("Authorize::txn_amt= [%f]\n",dTmp));
	}
	else{
DEBUGLOG(("Authorize::txn_amt not found!!\n"));
		iRet=INT_PAY_AMOUNT_NOT_FOUND;
		PutField_Int(hContext,"internal_error",iRet);
	}


	if(GetField_CString(hRequest,"remark",&csTmp)){
DEBUGLOG(("Authorize::remark= [%s]\n",csTmp));
		PutField_CString(hContext,"remark",csTmp);
	}

/*
	if(iRet==PD_OK){
DEBUGLOG(("Authorize::Call BOSettlementFee\n"));
		BOObjPtr = CreateObj(BOPtr,"BOFee","GetSettlementFee");
		if((unsigned long)(*BOObjPtr)(hContext,hRequest)==PD_OK){
			if(GetField_Double(hContext,"merchant_txn_fee",&dTmp)){
				dTotalFee += dTmp;
DEBUGLOG(("Authorize::txn fee=[%f]\n",dTmp));
			}
			if(GetField_Double(hContext,"merchant_mu_fee",&dTmp)){
				dTotalFee += dTmp;
DEBUGLOG(("Authorize::mu fee=[%f]\n",dTmp));
			}
			PutField_Double(hResponse,"fee",dTotalFee);
DEBUGLOG(("Authorize::total fee=[%f]\n",dTotalFee));

			//if(GetField_Double(hContext,"src_settlement_txn_amt",&dTmp)){
			//	PutField_Double(hContext,"net_amt",dTmp);
			//}
		}
		else{
			iRet = INT_ERR;
DEBUGLOG(("Authorize::BOSettlementFee Error\n"));
		}
	}


	if(iRet==PD_OK){
		ChannelObjPtr = CreateObj(ChannelPtr,"WEBChannel","AddTxnFeeChgLog");
		iRet = (unsigned long)((*ChannelObjPtr)(hContext));
	}
*/	

	if(iRet==PD_OK){
		BOObjPtr = CreateObj(BOPtr,"BOBalance","UpdateSettlementAmount");
		iRet = (unsigned long) ((*BOObjPtr)(hContext));
		
	}

	if(iRet==PD_OK){
		DBObjPtr = CreateObj(DBPtr,"DBTransaction","AddDetail");
		iRet = (unsigned long) ((*DBObjPtr)(hContext));
	}


	if(iRet==PD_OK){
		DBObjPtr = CreateObj(DBPtr,"DBTransaction","UpdateDetail");
		iRet = (unsigned long) ((*DBObjPtr)(hContext));
	}

	if(iRet==PD_OK){
		PutField_Char(hReq,"status",PD_PROCESSING);
		DBObjPtr = CreateObj(DBPtr,"DBMerchantSettlementDetail","Add");
		iRet = (unsigned long) ((*DBObjPtr)(hReq));
	}

	if(iRet!=PD_OK){
		PutField_Int(hContext,"internal_error",INT_ERR);
	}

DEBUGLOG(("TxnMgtOnUsSTR Normal Exit() iRet = [%d]\n",iRet));
	return iRet;
}
