int     Authorize(hash_t* hContext,
                        hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;

	//char	*csOrgTxnSeq;
	char	*csTmp;
	double	dTmp;
	//double	dTotalFee=0;
	//hash_t	*hRec;
