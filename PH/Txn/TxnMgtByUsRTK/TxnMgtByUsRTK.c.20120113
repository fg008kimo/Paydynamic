char cDebug;
/*
#define PD_ACK_RESEND   "resend_web_ack.sh"
*/
#define	PD_RETRY	'R'

OBJPTR(DB);

void TxnMgtByUsRTK(char    cdebug)
{
        cDebug = cdebug;
}

int     Authorize(hash_t* hContext,
                        const hash_t* hRequest,
                        hash_t* hResponse)
{
        int     iRet = PD_OK;
	char*	csOrgTxnSeq;
	char*	csUser;
        char    csDateTime[PD_DATETIME_LEN + 1];
        char    csDate[PD_DATE_LEN +1];
        char    csTime[PD_TIME_LEN +1];
        hash_t  *hReq;

        hReq = (hash_t*) malloc (sizeof(hash_t));
        hash_init(hReq,0);


DEBUGLOG(("TxnMgtByUsRTK Authorize()\n"));

/* txn_seq */
	if (GetField_CString(hRequest,"org_txn_seq",&csOrgTxnSeq)) {
DEBUGLOG(("Authorize org_txn_seq = [%s]\n",csOrgTxnSeq));
		PutField_CString(hReq,"txn_seq",csOrgTxnSeq);
	}
	else {
		iRet = INT_TXN_ID_MISSING;
	}

/* user */     
        if(GetField_CString(hRequest,"add_user",&csUser)){
DEBUGLOG(("Authorize::add_user= [%s]\n",csUser));
		PutField_CString(hReq, "add_user", csUser);
	}
             
	strcpy(csDateTime,getdatetime());
DEBUGLOG(("Authorize local transmission date time = [%s]\n",csDateTime));

	memcpy(csDate,csDateTime,PD_DATE_LEN);
	csDate[PD_DATE_LEN] = '\0';

/* tm_date */   
	PutField_CString(hReq,"local_tm_date",csDate);
DEBUGLOG(("Authorize local transmission date = [%s]\n",csDate));

/* tm_time */   
	memcpy(csTime,&csDateTime[PD_DATE_LEN],PD_DATE_LEN);
	csTime[PD_TIME_LEN] = '\0';
	PutField_CString(hReq,"local_tm_time",csTime);
DEBUGLOG(("Authorize local transmission time = [%s]\n",csTime));


/* status */
	PutField_Char(hReq,"status",PD_RETRY);

	if (iRet == PD_OK) {
DEBUGLOG(("Authorize::Call DBTxnAckRetry:UpateCounter\n"));
		DBObjPtr = CreateObj(DBPtr,"DBTxnAckRetry","UpdateCounter");
		iRet = (unsigned long) (*DBObjPtr)(hReq);
DEBUGLOG(("Authorize DBTxnAckRetry [%d]\n", iRet));
	}


        if (iRet != PD_OK){
                PutField_Int(hContext,"internal_error",iRet);
        }


DEBUGLOG(("TxnMgtByUsRTK Normal Exit() iRet = [%d]\n",iRet));

	return iRet;
}
