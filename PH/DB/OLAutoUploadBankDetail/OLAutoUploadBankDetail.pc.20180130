int GetAutoUploadBankAccts(const hash_t* hRec, recordset_t* myRec)
{
        char*   csAcctType = NULL;
        char*   csClientId = NULL;
	char*	csBankCode = NULL;
	hash_t 	*myHash;

        EXEC SQL WHENEVER SQLERROR GOTO getautobankacct_error;
        EXEC SQL WHENEVER NOTFOUND CONTINUE;

        EXEC SQL BEGIN DECLARE SECTION;

                varchar   	hv_client_id[PD_CLIENT_ID_LEN];
		varchar		hv_int_bank_code[PD_BANK_CODE_LEN];
		varchar         hv_acct_type[PD_ACCT_TYPE_LEN];
		int		hv_int_bank_code_exist;

		varchar		v_client_name[PD_CLIENT_NAME_LEN + 1];
		varchar         v_psp_id[PD_PSP_ID_LEN + 1];
		varchar         v_psp_name[PD_NAME_LEN + 1];
		varchar         v_baid[PD_BAID_LEN + 1];
		varchar         v_baid_name[PD_BAID_NAME_LEN + 1];
		varchar       	v_int_bank_code[PD_BANK_CODE_LEN + 1];
		varchar 	v_bank_abbrev_name[PD_EXT_BANK_CODE_LEN + 1];
		varchar 	v_bank_name[PD_AC_BANK_NAME_LEN + 1];
		varchar 	v_bank_country[PD_COUNTRY_LEN + 1];
		varchar         v_bank_acct_num[PD_BANK_ACCT_NUM_LEN + 1];
		varchar         v_bank_acct_ccy[PD_CCY_ID_LEN + 1];
		varchar         v_bank_acct_name[PD_NAME_LEN + 1];
                varchar         v_bank_acct_short_name[PD_BANK_ACCT_SHORT_NAME_LEN + 1];
		int		v_bank_disabled;
		int		v_bank_acct_disabled;

		short		ind_client_name= -1;
		short		ind_psp_id = -1;
		short		ind_psp_name = -1;
		short		ind_baid = -1;
		short		ind_baid_name = -1;
		short		ind_int_bank_code = -1;
		short		ind_bank_abbrev_name = -1;
		short		ind_bank_name = -1;
		short		ind_bank_country = -1;
		short		ind_bank_acct_num = -1;
		short		ind_bank_acct_ccy	= -1;
		short 		ind_bank_acct_name = -1;
		short		ind_bank_acct_short_name = -1;
		short		ind_bank_disabled = -1;
		short		ind_bank_acct_disabled = -1;

        EXEC SQL END DECLARE SECTION;

/* acct_type */
        if(GetField_CString(hRec,"acct_type",&csAcctType)){
                hv_acct_type.len = strlen(csAcctType);
                memcpy(hv_acct_type.arr,csAcctType,hv_acct_type.len);
DEBUGLOG(("GetAutoUploadBankAccts: acct_type = [%.*s]\n",hv_acct_type.len,hv_acct_type.arr));
        }else{
                return INT_ERR;
DEBUGLOG(("GetAutoUploadBankAccts: acct_type is missing\n"));
        }

/* client_id */
	if(GetField_CString(hRec,"client_id",&csClientId)){
		hv_client_id.len = strlen(csClientId);
        	memcpy(hv_client_id.arr,csClientId,hv_client_id.len);
DEBUGLOG(("GetAutoUploadBankAccts: client_id = [%.*s]\n",hv_client_id.len,hv_client_id.arr));
        }else{
                return INT_ERR;
DEBUGLOG(("GetAutoUploadBankAccts: client_id is missing\n"));
        }

/* int_bank_code */
        if(GetField_CString(hRec,"int_bank_code",&csBankCode)){
		hv_int_bank_code_exist = 1;
		hv_int_bank_code.len = strlen(csBankCode);
                memcpy(hv_int_bank_code.arr,csBankCode,hv_int_bank_code.len);
DEBUGLOG(("GetAutoUploadBankAccts: int_bank_code = [%.*s]\n",hv_int_bank_code.len,hv_int_bank_code.arr));
        }else{
		hv_int_bank_code_exist = 0;
DEBUGLOG(("GetAutoUploadBankAccts: int_bank_code is missing\n"));
        }

	EXEC SQL DECLARE c_cursor_getautobankacct CURSOR FOR
		select 	pm_client_name,
	   		opd_psp_id,
	   		opd_psp_name,
	   		obai_baid,
	   		obai_baid_name,
	   		ob_int_bank_code,
	   		bank_abbrev_name,
	   		bank_name,
			country,
	   		ob_bank_acct_num,
	   		ob_acct_ccy,
	   		ob_bank_acct_name,
	   		ob_bank_acct_short_name,
			oaubd_bank_disabled,
			oaubd_bank_acct_disabled
		from 	ol_auto_upload_bank_detail,
			bank_desc,
     			ol_bank_accts,
     			ol_bank_acct_id,
	 		ol_psp_detail,
	 		psp_master
		where 	obai_int_bank_code = oaubd_int_bank_code
		and	ob_int_bank_code = obai_int_bank_code
		and 	internal_bank_code = ob_int_bank_code	
		and	((:hv_int_bank_code_exist <> 1) or (:hv_int_bank_code_exist = 1 and oaubd_int_bank_code = :hv_int_bank_code))			
		and 	obai_bank_acct_num = oaubd_bank_acct_num
		and 	ob_bank_acct_num = obai_bank_acct_num
		and 	obai_psp_id = opd_psp_id
		and     pm_client_id = :hv_client_id
		and 	opd_client_id = pm_client_id
		and	oaubd_bank_disabled = 0
		/*and	oaubd_bank_acct_disabled = 0*/
		and 	offline_support = 1
		and 	offline_deposit = 1
		/*and 	ob_status_type in ('A', 'B', 'F', 'S', 'SS', 'NF', 'ND')*/
		and 	ob_status_type in ('A')
		and 	ob_acct_type = :hv_acct_type
		and 	ob_sys_switch_enabled = 1
		and 	obai_status = 'O'
		and 	opd_bank_acct_type = ob_acct_type
		and 	opd_status = 'O'
		and 	opd_disabled = 0
		and 	pm_status = 'O'
		and 	pm_mode_type = 'OFL'
		order by pm_client_id, ob_int_bank_code, ob_bank_acct_num;
	
	EXEC SQL OPEN c_cursor_getautobankacct;
        do{
                EXEC SQL FETCH c_cursor_getautobankacct
                INTO
                        :v_client_name:ind_client_name,
                        :v_psp_id:ind_psp_id,
                        :v_psp_name:ind_psp_name,
			:v_baid:ind_baid,
			:v_baid_name:ind_baid_name,
			:v_int_bank_code:ind_int_bank_code,
			:v_bank_abbrev_name:ind_bank_abbrev_name,
                	:v_bank_name:ind_bank_name,
                	:v_bank_country:ind_bank_country,
                	:v_bank_acct_num:ind_bank_acct_num,
                	:v_bank_acct_ccy:ind_bank_acct_ccy,
                	:v_bank_acct_name:ind_bank_acct_name,
                	:v_bank_acct_short_name:ind_bank_acct_short_name,
                	:v_bank_disabled:ind_bank_disabled,
			:v_bank_acct_disabled:ind_bank_acct_disabled;

                if (SQLCODE == SQL_NOT_FOUND) {
                        break;
                }

                myHash = (hash_t*) malloc (sizeof(hash_t));
		hash_init(myHash,0);

/* acct_type */
		PutField_CString(myHash,"acct_type",csAcctType);
DEBUGLOG(("GetAutoUploadBankAccts: acct_type = [%s]\n",csAcctType));

/* client_id */
		PutField_CString(myHash,"client_id",csClientId);
DEBUGLOG(("GetAutoUploadBankAccts: client_id = [%s]\n",csClientId));

/* int_bank_code */
		if (hv_int_bank_code_exist == 1) {
			PutField_CString(myHash,"int_bank_code",csBankCode);
DEBUGLOG(("GetAutoUploadBankAccts: int_bank_code = [%s]\n",csBankCode));
		} else {
			if(ind_int_bank_code>=0){
                        	v_int_bank_code.arr[v_int_bank_code.len]='\0';
                        	PutField_CString(myHash,"int_bank_code",(const char*)v_int_bank_code.arr);
DEBUGLOG(("GetAutoUploadBankAccts: int_bank_code = [%s]\n",v_int_bank_code.arr));
                	}
		}

/* client_name */
                if(ind_client_name>=0){
			v_client_name.arr[v_client_name.len]='\0';
                        PutField_CString(myHash,"client_name",(const char*)v_client_name.arr);
DEBUGLOG(("GetAutoUploadBankAccts: client_name = [%s]\n",v_client_name.arr));
                }

/* psp_id */
                if(ind_psp_id>=0){
                        v_psp_id.arr[v_psp_id.len]='\0';
                        PutField_CString(myHash,"psp_id",(const char*)v_psp_id.arr);
DEBUGLOG(("GetAutoUploadBankAccts: psp_id = [%s]\n",v_psp_id.arr));
                }

/* psp_name */
                if(ind_psp_name>=0){
                        v_psp_name.arr[v_psp_name.len]='\0';
                        PutField_CString(myHash,"psp_name",(const char*)v_psp_name.arr);
DEBUGLOG(("GetAutoUploadBankAccts: psp_name = [%s]\n",v_psp_name.arr));
                }

/* baid */
                if(ind_baid>=0){
                        v_baid.arr[v_baid.len]='\0';
                        PutField_CString(myHash,"baid",(const char*)v_baid.arr);
DEBUGLOG(("GetAutoUploadBankAccts: baid = [%s]\n",v_baid.arr));
                }

/* baid_name */
                if(ind_baid_name>=0){
                        v_baid_name.arr[v_baid_name.len]='\0';
                        PutField_CString(myHash,"baid_name",(const char*)v_baid_name.arr);
DEBUGLOG(("GetAutoUploadBankAccts: baid_name = [%s]\n",v_baid_name.arr));
                }

/* bank_abbrev_name */
                if(ind_bank_abbrev_name>=0){
                        v_bank_abbrev_name.arr[v_bank_abbrev_name.len]='\0';
                        PutField_CString(myHash,"bank_abbrev_name",(const char*)v_bank_abbrev_name.arr);
DEBUGLOG(("GetAutoUploadBankAccts: bank_abbrev_name = [%s]\n",v_bank_abbrev_name.arr));
                }

/* bank_name */
                if(ind_bank_name>=0){
                        v_bank_name.arr[v_bank_name.len]='\0';
                        PutField_CString(myHash,"bank_name",(const char*)v_bank_name.arr);
DEBUGLOG(("GetAutoUploadBankAccts: bank_name = [%s]\n",v_bank_name.arr));
                }

/* bank_country */
                if(ind_bank_country>=0){
                        v_bank_country.arr[v_bank_country.len]='\0';
                        PutField_CString(myHash,"bank_country",(const char*)v_bank_country.arr);
DEBUGLOG(("GetAutoUploadBankAccts: bank_country = [%s]\n",v_bank_country.arr));
                }

/* bank_acct_num */
                if(ind_bank_acct_num>=0){
                        v_bank_acct_num.arr[v_bank_acct_num.len]='\0';
                        PutField_CString(myHash,"bank_acct_num",(const char*)v_bank_acct_num.arr);
DEBUGLOG(("GetAutoUploadBankAccts: bank_acct_num = [%s]\n",v_bank_acct_num.arr));
                }

/* bank_acct_ccy */
                if(ind_bank_acct_ccy>=0){
                        v_bank_acct_ccy.arr[v_bank_acct_ccy.len]='\0';
                        PutField_CString(myHash,"bank_acct_ccy",(const char*)v_bank_acct_ccy.arr);
DEBUGLOG(("GetAutoUploadBankAccts: bank_acct_ccy = [%s]\n",v_bank_acct_ccy.arr));
                }

/* bank_acct_name */
                if(ind_bank_acct_name>=0){
                        v_bank_acct_name.arr[v_bank_acct_name.len]='\0';
                        PutField_CString(myHash,"bank_acct_name",(const char*)v_bank_acct_name.arr);
DEBUGLOG(("GetAutoUploadBankAccts: bank_acct_name = [%s]\n",v_bank_acct_name.arr));
                }

/* bank_acct_short_name */
                if(ind_bank_acct_short_name>=0){
                        v_bank_acct_short_name.arr[v_bank_acct_short_name.len]='\0';
                        PutField_CString(myHash,"bank_acct_short_name",(const char*)v_bank_acct_short_name.arr);
DEBUGLOG(("GetAutoUploadBankAccts: bank_acct_short_name = [%s]\n",v_bank_acct_short_name.arr));
                }

/* bank_disabled */
                if(ind_bank_disabled>=0){
                        PutField_Int(myHash,"bank_disabled",v_bank_disabled);
DEBUGLOG(("GetAutoUploadBankAccts: bank_disabled = [%d]\n",v_bank_disabled));
                }

/* bank_acct_disabled */
                if(ind_bank_acct_disabled>=0){
                        PutField_Int(myHash,"bank_acct_disabled",v_bank_acct_disabled);
DEBUGLOG(("GetAutoUploadBankAccts: bank_acct_disabled = [%d]\n",v_bank_acct_disabled));
                }

		RecordSet_Add(myRec,myHash);

        }while(PD_TRUE);

        EXEC SQL CLOSE c_cursor_getautobankacct;

DEBUGLOG(("GetAutoUploadBankAccts Normal Exit\n"));
        return PD_OK;

getautobankacct_error:
DEBUGLOG(("getautobankacct_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
ERRLOG("OLAutoUploadBankDetail_Get: SP_INTERNAL_ERR\n");
        EXEC SQL WHENEVER SQLERROR CONTINUE;
        EXEC SQL CLOSE c_cursor_getautobankacct;
        return PD_ERR;
}

int UpdateDisabled(const hash_t *hDisabled)
{
	char *csBankCode;
	char *csAcctNum;
	char *csUser;
	int iBankDisabled = 0;
	int iAcctDisabled = 0;
	int iLvl = 0;
	enum {BankLvl = 1, AcctLvl};

	EXEC SQL WHENEVER SQLERROR GOTO getautobankacct_error;
	EXEC SQL WHENEVER NOTFOUND CONTINUE;

	EXEC SQL BEGIN DECLARE SECTION;
		varchar hv_int_bank_code[PD_BANK_CODE_LEN];
		varchar hv_bank_acct_num[PD_BANK_ACCT_NUM_LEN];
		varchar hv_update_user[PD_UPDATE_USER_LEN];
		int hv_bank_disabled;
		int hv_acct_disabled;
	EXEC SQL END DECLARE SECTION;

DEBUGLOG(("updateDisabled: Begin\n"));
	
/* bank_code */
	if (GetField_CString(hDisabled, "int_bank_code", &csBankCode))
	{
		hv_int_bank_code.len = strlen(csBankCode);
		memcpy(hv_int_bank_code.arr, csBankCode, hv_int_bank_code.len);
DEBUGLOG(("UpdateDisabled: int_bank_code = [%s]\n", csBankCode));
	}
	else
	{
DEBUGLOG(("UpdateDisabled: int_bank_code not found in the hash!\n"));
		return PD_ERR;
	}

/* acct_num */	
	if (GetField_CString(hDisabled, "bank_acct_num", &csAcctNum))
	{
		iLvl = AcctLvl;
		hv_bank_acct_num.len = strlen(csAcctNum);	
		memcpy(hv_bank_acct_num.arr, csAcctNum, hv_bank_acct_num.len);
DEBUGLOG(("UpdateDisabled: bank_acct_no = [%s]\n", csAcctNum));
	}
	else
	{
		iLvl = BankLvl;
DEBUGLOG(("UpdateDisabled: bank_acct_disabled remain unchanged\n"));
	}

	switch (iLvl)
	{
	case BankLvl:
/* bank_disabled */
		if (GetField_Int(hDisabled, "bank_disabled", &iBankDisabled))
		{
			hv_bank_disabled = iBankDisabled;
DEBUGLOG(("UpdateDisabled: bank_disabled = [%d]\n", iBankDisabled));
		}
		else
		{
DEBUGLOG(("UpdateDisabled: bank_disabled not found in the hash!\n"));
			return PD_ERR;
		}
		break;
	
	case AcctLvl:
/* acct_disabled */	
		if (GetField_Int(hDisabled, "acct_disabled", &iAcctDisabled))
		{			
			hv_acct_disabled = iAcctDisabled;
DEBUGLOG(("UpdateDisabled: acct_disabled = [%d]\n", iAcctDisabled));
		}
		else
		{
DEBUGLOG(("UpdateDisabled: acct_disabled not found in the hash!\n"));
			return PD_ERR;
		}
		break;
	}

/* update_user */	
	if (iLvl != 0 && GetField_CString(hDisabled, "update_user", &csUser))
	{			
		hv_update_user.len = strlen(csUser);	
		memcpy(hv_update_user.arr, csUser, hv_update_user.len);
DEBUGLOG(("UpdateDisabled: update_user = [%s]\n", csUser));
	}
	else if (iLvl != 0)
	{
DEBUGLOG(("UpdateDisabled: update_user not found in the hash!\n"));
		return PD_ERR;
	}
	else
	{
DEBUGLOG(("UpdateDisabled: Change neither bank level nor acct level\n"));
ERRLOG("OLAutoUploadBankDetail: Change neither bank level nor acct level\n");
		return PD_ERR;	
	}

/* update table: OL_AUTO_UPLOAD_BANK_DETAIL */
	switch (iLvl)
	{
	case BankLvl:
DEBUGLOG(("UpdateDisabled: SQL Update on OL_AUTO_UPLOAD_BANK_DETAIL.OAUBD_BANK_DISABLED\n"));
		EXEC SQL UPDATE	OL_AUTO_UPLOAD_BANK_DETAIL
			SET	OAUBD_BANK_DISABLED = :hv_bank_disabled,
				OAUBD_PGM_UPDATE_USER = :hv_update_user,
				OAUBD_PGM_UPDATE_TIMESTAMP = SYSDATE
			WHERE	OAUBD_INT_BANK_CODE = :hv_int_bank_code;
		break;

	case AcctLvl:
DEBUGLOG(("UpdateDisabled: SQL Update on OL_AUTO_UPLOAD_BANK_DETAIL.OAUBD_BANK_ACCT_DISABLED\n"));
		EXEC SQL UPDATE OL_AUTO_UPLOAD_BANK_DETAIL
			SET	OAUBD_BANK_ACCT_DISABLED = :hv_acct_disabled,
				OAUBD_PGM_UPDATE_USER = :hv_update_user,
				OAUBD_PGM_UPDATE_TIMESTAMP = SYSDATE
			WHERE	OAUBD_INT_BANK_CODE = :hv_int_bank_code
				AND OAUBD_BANK_ACCT_NUM = :hv_bank_acct_num;
		break;
	}
	
DEBUGLOG(("UpdateDisabled: SQL Update OK\n"));

	return PD_OK;

getautobankacct_error:
DEBUGLOG(("UpdateDisabled: Update Error Occurr unexpectedly!\n"));
DEBUGLOG(("getautobankacct_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
ERRLOG("UpdateDisabled: Update Error Occurr unexpectedly!\n");
	return PD_ERR;
}
