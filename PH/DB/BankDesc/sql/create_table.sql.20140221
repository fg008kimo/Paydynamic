  LANGUAGE            CHAR(2 BYTE),
  BANK_NAME           VARCHAR2(50 BYTE),
  LOGO_PATH           VARCHAR2(100 BYTE),
  CREATE_TIMESTAMP    DATE                      DEFAULT SYSDATE,
  UPDATE_TIMESTAMP    DATE                      DEFAULT SYSDATE,
  CREATE_USER         VARCHAR2(25 BYTE),
  UPDATE_USER         VARCHAR2(25 BYTE),
  COUNTRY             VARCHAR2(2 BYTE),
  FE_DISPLAY_ORDER    INTEGER
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;


