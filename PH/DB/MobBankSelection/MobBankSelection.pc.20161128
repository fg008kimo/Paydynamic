int GetAllMobileSegments(const char* csMerchantId,
                         recordset_t* myRec)
{
	int iRet = PD_OK;
	hash_t *myHash;

        EXEC SQL WHENEVER SQLERROR GOTO getgrp_error;
        EXEC SQL WHENEVER NOTFOUND CONTINUE;

        EXEC SQL BEGIN DECLARE SECTION;

		varchar	hv_merchant_id[PD_MERCHANT_ID_LEN];

		varchar	v_group[PD_CUSTOMER_GROUP_CODE_LEN+1];
		varchar	v_overflow_group[PD_CUSTOMER_GROUP_CODE_LEN+1];
		varchar	v_union_group[PD_CUSTOMER_GROUP_CODE_LEN+1];
		varchar	v_bank_code[PD_BANK_CODE_LEN+1];
		int	v_def_assign;
		int	v_cust_cnt_limit;
		double	v_amt_limit;
		int	v_schedule_id;
		int	v_note_id;

		short	hv_return_value;

		short	ind_merchant_id = -1;

		short	ind_group = -1;
		short	ind_overflow_group = -1;
		short	ind_union_group = -1;
		short	ind_bank_code = -1;
		short	ind_def_assign = -1;
		short	ind_cust_cnt_limit = -1;
		short	ind_amt_limit = -1;
		short	ind_schedule_id = -1;
		short	ind_note_id = -1;

		SQL_CURSOR      c_cursor_id;
        EXEC SQL END DECLARE SECTION;

// merchant_id
	hv_merchant_id.len = strlen(csMerchantId);
	memcpy(hv_merchant_id.arr,csMerchantId,hv_merchant_id.len);
	ind_merchant_id = 0;
DEBUGLOG(("GetAllMobileSegments: merchant_id = [%.*s]\n",hv_merchant_id.len,hv_merchant_id.arr));


	EXEC SQL ALLOCATE       :c_cursor_id;
        EXEC SQL EXECUTE
                BEGIN
                        :hv_return_value := sp_mob_bank_get_all(:hv_merchant_id:ind_merchant_id,
								  :c_cursor_id);
                END;
        END-EXEC;

	if (hv_return_value == 0 ) {
		for (;;) {
			ind_group = -1;
			ind_overflow_group = -1;
			ind_union_group = -1;
			ind_bank_code = -1;
			ind_def_assign = -1;
			ind_cust_cnt_limit = -1;
			ind_amt_limit = -1;
			ind_schedule_id = -1;
			ind_note_id = -1;

			EXEC SQL WHENEVER NOTFOUND DO break;
			EXEC SQL FETCH :c_cursor_id
			INTO	
				:v_group:ind_group,
				:v_bank_code:ind_bank_code,
				:v_overflow_group:ind_overflow_group,
				:v_union_group:ind_union_group,
				:v_def_assign:ind_def_assign,
				:v_cust_cnt_limit:ind_cust_cnt_limit,
				:v_amt_limit:ind_amt_limit,
				:v_schedule_id:ind_schedule_id,
				:v_note_id:ind_note_id;

			if (SQLCODE == SQL_NOT_FOUND) {
				break;
			}

			myHash = (hash_t*) malloc (sizeof(hash_t));
			hash_init(myHash,0);

			if (ind_group>= 0) {
				v_group.arr[v_group.len] = '\0';
				PutField_CString(myHash,"mob_segment",(const char*)v_group.arr);
DEBUGLOG(("GetAllMobileSegments: group = [%s]\n",v_group.arr));
			}
			if (ind_bank_code>= 0) {
				v_bank_code.arr[v_bank_code.len] = '\0';
				PutField_CString(myHash,"bank_code",(const char*)v_bank_code.arr);
DEBUGLOG(("GetAllMobileSegments: bank_code = [%s]\n",v_bank_code.arr));
			}
			if (ind_overflow_group>= 0) {
				v_overflow_group.arr[v_overflow_group.len] = '\0';
				PutField_CString(myHash,"overflow_group",(const char*)v_overflow_group.arr);
DEBUGLOG(("GetAllMobileSegments: overflow_group = [%s]\n",v_overflow_group.arr));
			}
			if (ind_union_group>= 0) {
				v_union_group.arr[v_union_group.len] = '\0';
				PutField_CString(myHash,"union_group",(const char*)v_union_group.arr);
DEBUGLOG(("GetAllMobileSegments: union_group = [%s]\n",v_union_group.arr));
			}
			if(ind_def_assign<0){
				v_def_assign = 0;
			}
			PutField_Int(myHash,"def_assign",v_def_assign);
DEBUGLOG(("GetAllMobileSegments: def_assign = [%d]\n",v_def_assign));

			if(ind_cust_cnt_limit<0)
				v_cust_cnt_limit= 0;
			PutField_Int(myHash,"cust_cnt_limit",v_cust_cnt_limit);
DEBUGLOG(("GetAllMobileSegments: cust_cnt_limit = [%d]\n",v_cust_cnt_limit));

			if(ind_amt_limit<0)
				v_amt_limit= 0.0;
			PutField_Double(myHash,"amt_limit",v_amt_limit);
DEBUGLOG(("GetAllMobileSegments: amt_limit = [%lf]\n",v_amt_limit));

			if(ind_schedule_id>=0){
				PutField_Int(myHash,"schedule_id",v_schedule_id);
DEBUGLOG(("GetAllMobileSegments: schedule_id = [%d]\n",v_schedule_id));
			}

			if(ind_note_id>=0){
				PutField_Int(myHash,"note_id",v_note_id);
DEBUGLOG(("GetAllMobileSegments: note_id = [%d]\n",v_note_id));
			}

			RecordSet_Add(myRec,myHash);
		}
	}
	else{
		iRet = PD_ERR;
DEBUGLOG(("GetAllMobileSegments  Failed!!!\n"));
	}

DEBUGLOG(("GetAllMobileSegments: Finished iRet = [%d]\n",iRet));
	return iRet;

getgrp_error:
DEBUGLOG(("getgrp_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
    EXEC SQL WHENEVER SQLERROR CONTINUE;
    return PD_ERR;
}



int GetDefSegment(const char* csMerchantId,
                     hash_t * hTxn)
{
	int iRet = PD_NOT_FOUND;

        EXEC SQL WHENEVER SQLERROR GOTO def_seg_error;
        EXEC SQL WHENEVER NOTFOUND CONTINUE;

        EXEC SQL BEGIN DECLARE SECTION;

		varchar	hv_merchant_id[PD_MERCHANT_ID_LEN];

		varchar	v_group[PD_CUSTOMER_GROUP_CODE_LEN+1];

		short	hv_return_value;

		short	ind_merchant_id = -1;

		short	ind_group = -1;

		SQL_CURSOR      c_cursor_id;
        EXEC SQL END DECLARE SECTION;

/* merchant_id */
	hv_merchant_id.len = strlen(csMerchantId);
	memcpy(hv_merchant_id.arr,csMerchantId,hv_merchant_id.len);
	ind_merchant_id = 0;
DEBUGLOG(("GetDefSegment: merchant_id = [%.*s]\n",hv_merchant_id.len,hv_merchant_id.arr));

	EXEC SQL ALLOCATE       :c_cursor_id;
        EXEC SQL EXECUTE
                BEGIN
                        :hv_return_value := sp_mob_bank_def_grp(:hv_merchant_id:ind_merchant_id,
								  :c_cursor_id);
                END;
        END-EXEC;

	if (hv_return_value == 0 ) {
		for (;;) {
			ind_group = -1;

			EXEC SQL WHENEVER NOTFOUND DO break;
			EXEC SQL FETCH :c_cursor_id
			INTO	
				:v_group:ind_group;

			if (SQLCODE == SQL_NOT_FOUND) {
				break;
			}

			if (ind_group>= 0) {
				v_group.arr[v_group.len] = '\0';
DEBUGLOG(("GetDefSegment: group = [%s]\n",v_group.arr));
				PutField_CString(hTxn,"def_segment",(const char*)v_group.arr);
				iRet = PD_FOUND;
			}
		}
	}
	else{
		iRet = PD_ERR;
DEBUGLOG(("GetDefSegment  Failed!!!\n"));
	}

DEBUGLOG(("GetDefSegment: Finished iRet = [%d]\n",iRet));
	return iRet;

def_seg_error:
DEBUGLOG(("def_seg_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
    EXEC SQL WHENEVER SQLERROR CONTINUE;
    return PD_ERR;
}


int GetOverflowGroup(const char* csGroup,
		       hash_t* myHash)
{
	EXEC SQL WHENEVER SQLERROR GOTO get_overflow_error;
        EXEC SQL WHENEVER NOTFOUND CONTINUE;

        EXEC SQL BEGIN DECLARE SECTION;
                varchar hv_group[PD_CUSTOMER_GROUP_CODE_LEN];

                varchar v_ovf_group[PD_CUSTOMER_GROUP_CODE_LEN+1];

                short   ind_ovf_group= -1;
        EXEC SQL END DECLARE SECTION;

        hv_group.len = strlen((const char *)csGroup);
        memcpy(hv_group.arr,csGroup,hv_group.len);
DEBUGLOG(("GetOverflowGroup: group = [%.*s]\n",hv_group.len,hv_group.arr));

        EXEC SQL DECLARE c_cursor_get_overflow CURSOR FOR
                select	mbs_overflow_grp
		from	mob_bank_selection
		where	mbs_group = :hv_group 
		and	mbs_disabled = 0;

        EXEC SQL OPEN c_cursor_get_overflow;
        do{    
                EXEC SQL FETCH c_cursor_get_overflow
                INTO
                        :v_ovf_group:ind_ovf_group;

                if (SQLCODE == SQL_NOT_FOUND) {
                        break;
                }
                if (ind_ovf_group >= 0) {
                        v_ovf_group.arr[v_ovf_group.len] ='\0';
                        PutField_CString(myHash,"overflow_group",(const char*)v_ovf_group.arr);
DEBUGLOG(("GetOverflowGroup overflow_group = [%s]\n",v_ovf_group.arr));
                }

        }while(PD_TRUE);

        EXEC SQL CLOSE c_cursor_get_overflow;

        return PD_OK;

get_overflow_error:
DEBUGLOG(("get_overflow_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
ERRLOG("MobBankSelection::get_overflow_error code %d\n", sqlca.sqlcode);
    EXEC SQL WHENEVER SQLERROR CONTINUE;
    EXEC SQL CLOSE c_cursor_get_overflow;
    return PD_ERR;
}


int CheckGroupTransfer(const char* csFrGroup, const char* csToGroup, int *iCanTrf)
{
        int iRet = PD_OK;
        *iCanTrf = PD_FALSE;

DEBUGLOG(("CheckGroupTransfer()\n"));
        EXEC SQL WHENEVER SQLERROR GOTO checkgrptrf_error;
        EXEC SQL WHENEVER NOTFOUND CONTINUE;

        EXEC SQL BEGIN DECLARE SECTION;
                varchar hv_fr_grp[PD_CUSTOMER_GROUP_CODE_LEN];
                varchar hv_to_grp[PD_CUSTOMER_GROUP_CODE_LEN];

                int	v_can_trf;

                short   ind_can_trf = -1;

        EXEC SQL END DECLARE SECTION;

	hv_fr_grp.len = strlen(csFrGroup);
	memcpy(hv_fr_grp.arr,csFrGroup,hv_fr_grp.len);
DEBUGLOG(("CheckGroupTransfer: group = [%.*s][%d]\n",hv_fr_grp.len,hv_fr_grp.arr,hv_fr_grp.len));

	hv_to_grp.len = strlen(csToGroup);
	memcpy(hv_to_grp.arr,csToGroup,hv_to_grp.len);
DEBUGLOG(("CheckGroupTransfer: group = [%.*s][%d]\n",hv_to_grp.len,hv_to_grp.arr,hv_to_grp.len));

        EXEC SQL
		select count(1)
		into :v_can_trf:ind_can_trf
		from(
			select count(1) to_grp
			from mob_bank_selection
			where mbs_allow_trf_in = 1 
			and mbs_group = :hv_to_grp   
			and mbs_disabled = 0
		    ),
		    (   select count(1) fr_grp
			from mob_bank_selection
			where  mbs_allow_trf_out = 1 
			and mbs_group = :hv_fr_grp
			and mbs_disabled = 0
		    )
		where to_grp = 1 
		and fr_grp = 1;


        if (ind_can_trf>= 0 ) {
                *iCanTrf = v_can_trf;
DEBUGLOG(("CheckGroupTransfer Can Transfer = [%d]\n",v_can_trf));
        }

DEBUGLOG(("CheckGroupTransfer iRet = [%d]\n",iRet));
        return iRet;

checkgrptrf_error:
DEBUGLOG(("checkgrptrf_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
    EXEC SQL WHENEVER SQLERROR CONTINUE;
    return PD_ERR;
}
