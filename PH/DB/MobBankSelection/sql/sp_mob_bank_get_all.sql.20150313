DROP FUNCTION sp_mob_bank_get_all;

CREATE OR REPLACE FUNCTION sp_mob_bank_get_all (
   in_merchant_id        MERCH_DETAIL.MERCHANT_ID%TYPE,
   out_cursor        OUT SYS_REFCURSOR)
   RETURN NUMBER
IS
BEGIN
   OPEN out_cursor FOR

	select	mbs_group,
		mbs_overflow_grp,
		mbs_union_grp,
		mbs_def_assign_grp,
		mst_cust_cnt,
		mst_amt_limit
	FROM (  SELECT	mbs_group,
			mbs_overflow_grp,
			mbs_union_grp,
			mbs_def_assign_grp
		FROM	mob_bank_selection, customer_group_rules
		WHERE	cgr_group_code = mbs_group
		AND	cgr_merchant_id = in_merchant_id
		AND	cgr_from_group_code IS NULL
		AND	mbs_disabled = 0
		AND	cgr_disabled = 0
        ORDER BY mbs_def_assign_grp)
       LEFT JOIN mob_segment_threshold ON mst_group = mbs_group
	where	(mbs_def_assign_grp = 0 and mst_is_exceed_cnt = 0 and mst_is_exceed_amt = 0) 
	or	mbs_def_assign_grp = 1;


   RETURN 0;
EXCEPTION
   WHEN OTHERS
   THEN
      RETURN 9;
END sp_mob_bank_get_all;
/
