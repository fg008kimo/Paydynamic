ALTER TABLE OL_TXN_ENGINE
 DROP PRIMARY KEY CASCADE;

DROP TABLE OL_TXN_ENGINE CASCADE CONSTRAINTS;

CREATE TABLE OL_TXN_ENGINE
(
  OTE_ACTIVITY             VARCHAR2(50 BYTE),
  OTE_BANK_STMT_TYPE       VARCHAR2(20 BYTE),
  OTE_CHANNEL              CHAR(3 BYTE),
  OTE_TRIGGER_TYPE         VARCHAR2(10 BYTE),
  OTE_RECON_TYPE	   VARCHAR2(10 BYTE),
  OTE_INPUT_BANK_STMT      CHAR(1 BYTE),
  OTE_INPUT_SYSTEM_TXN     CHAR(1 BYTE),
  OTE_ALLOW_TXN_MULTIPLE   INTEGER,
  OTE_ALLOW_STMT_MULTIPLE  INTEGER,
  OTE_DESCRIPTION          VARCHAR2(50 BYTE),
  OTE_ACTION_ID            INTEGER,
  OTE_ALLOW_PENDING_FUND   INTEGER,
  OTE_ALLOW_STMT_PARTIAL   INTEGER,
  OTE_ALLOW_TXN_PARTIAL    INTEGER,
  OTE_INCLUDE_BANK_CHARGE  INTEGER,
  OTE_INCLUDE_INTEREST     INTEGER,
  OTE_ALLOW_INSTANT_RECON  INTEGER,
  OTE_CREATE_TIMESTAMP     DATE                 DEFAULT sysdate,
  OTE_CREATE_USER          VARCHAR2(20 BYTE),
  OTE_UPDATE_TIMESTAMP     DATE                 DEFAULT sysdate,
  OTE_UPDATE_USER          VARCHAR2(20 BYTE)
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MAXSIZE          UNLIMITED
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;


CREATE UNIQUE INDEX OL_TXN_ENGINE_PK ON OL_TXN_ENGINE
(OTE_ACTIVITY, OTE_BANK_STMT_TYPE, OTE_CHANNEL, OTE_TRIGGER_TYPE, OTE_RECON_TYPE)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MAXSIZE          UNLIMITED
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE OL_TXN_ENGINE ADD (
  CONSTRAINT OL_TXN_ENGINE_PK
  PRIMARY KEY
  (OTE_ACTIVITY, OTE_BANK_STMT_TYPE, OTE_CHANNEL, OTE_TRIGGER_TYPE, OTE_RECON_TYPE)
  USING INDEX OL_TXN_ENGINE_PK
  ENABLE VALIDATE);

ALTER TABLE OL_TXN_ENGINE ADD (
  CONSTRAINT OL_TXN_ENGINE_FK01 
  FOREIGN KEY (OTE_TRIGGER_TYPE) 
  REFERENCES OL_DEF_ENGINE_TRIGGER_TYPE (ETT_TYPE)
  ENABLE VALIDATE,
  CONSTRAINT OL_TXN_ENGINE_FK02 
  FOREIGN KEY (OTE_INPUT_BANK_STMT) 
  REFERENCES DEF_OPTION_TYPE (DO_TYPE)
  ENABLE VALIDATE,
  CONSTRAINT OL_TXN_ENGINE_FK03 
  FOREIGN KEY (OTE_INPUT_SYSTEM_TXN) 
  REFERENCES DEF_OPTION_TYPE (DO_TYPE)
  ENABLE VALIDATE,
  CONSTRAINT OL_TXN_ENGINE_FK04 
  FOREIGN KEY (OTE_ACTIVITY) 
  REFERENCES OL_DEF_ENGINE_ACTIVITY (DEA_TYPE)
  ENABLE VALIDATE);

