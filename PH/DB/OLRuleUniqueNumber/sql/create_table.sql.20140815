CREATE TABLE OL_RULE_UNIQUE_NUMBER
(
  RU_MERCHANT_ID       VARCHAR2(15 BYTE),
  RU_BASE_AMT	       NUMBER (14,2)		DEFAULT 0,
  RU_RANGE_START       NUMBER (14,2)		DEFAULT 0,
  RU_RANGE_END         NUMBER (14,2),
  RU_STEP_SIZE	       NUMBER (14,2),
  RU_OPERATE_DIRECTION CHAR(1 BYTE),
  RU_AUTO_EXTEND       CHAR(1 BYTE)		DEFAULT 'N',
  RU_MAX_EXTEND_COUNT  INTEGER			DEFAULT 0,
  RU_CHECK_INTERVAL    INTEGER,
  RU_DISABLED          INTEGER                  DEFAULT 0,
  RU_DESC              VARCHAR2(50 BYTE),
  RU_CREATE_TIMESTAMP  DATE                     DEFAULT sysdate,
  RU_UPDATE_TIMESTAMP  DATE                     DEFAULT sysdate,
  RU_CREATE_USER       VARCHAR2(20 BYTE),
  RU_UPDATE_USER       VARCHAR2(20 BYTE)
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MAXSIZE          UNLIMITED
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN OL_RULE_UNIQUE_NUMBER.RU_CHECK_INTERVAL IS 'in hours';



