#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <math.h>
#include <sqlca.h>
#include "common.h"
#include "utilitys.h"
#include "internal.h"
#include "dbutility.h"
#include "OLTxnEngineSpecialActionDef.h"

#define SQLCA_STORAGE_CLASS extern
#define SQLCODE sqlca.sqlcode


char    cDebug;

void OLTxnEngineSpcActionDef(char cdebug)
{
        cDebug = cdebug;
}

int GetTxnEngineSpcActionDef(const hash_t *hRls, recordset_t *myRec)
{
	int iRet = PD_OK;

	int iCnt;
	char *csTmp;

	hash_t *myHash;

	EXEC SQL WHENEVER SQLERROR GOTO gettxnengspcactiondef_error;
	EXEC SQL WHENEVER NOTFOUND CONTINUE;

	EXEC SQL BEGIN DECLARE SECTION;
		varchar	hv_action[PD_ENGINE_ACTION_LEN];

		varchar	v_action[PD_ENGINE_ACTION_LEN+1];
		varchar	v_returned_tag[PD_TAG_LEN+1];
		varchar	v_returned_value[PD_TAG_LEN+1];

		short	ind_action = -1;
		short	ind_returned_tag = -1;
		short	ind_returned_value = -1;

	EXEC SQL END DECLARE SECTION;

// spc_action
	if (GetField_CString(hRls, "spc_action", &csTmp)) {
		hv_action.len = strlen(csTmp);
		strncpy((char*)hv_action.arr, csTmp, hv_action.len);
DEBUGLOG(("GetTxnEngineSpcActionDef:: action = [%s]\n", hv_action.len, (const char *)hv_action.arr));
	} else {
DEBUGLOG(("GetTxnEngineSpcActionDef:: action_id not found!\n"));
		iRet = INT_ACTION_ID_NOT_FOUND;
	}

	EXEC SQL DECLARE c_gettxnengspcactiondef CURSOR FOR
		SELECT	ESAD_SPECIAL_ACTION,
			ESAD_RETURNED_TAG,
			ESAD_RETURNED_VALUE
		FROM	OL_TXN_ENGINE_SPC_ACT_DEF
		WHERE	ESAD_SPECIAL_ACTION = :hv_action;

	if (iRet == PD_OK) {
		EXEC SQL OPEN c_gettxnengspcactiondef;

		for (;;) {
			EXEC SQL FETCH c_gettxnengspcactiondef
			INTO	:v_action:ind_action,
				:v_returned_tag:ind_returned_tag,
				:v_returned_value:ind_returned_value;

			if (SQLCODE == SQL_NOT_FOUND) {
				break;
			}

			iCnt++;
			myHash = (hash_t*) malloc (sizeof(hash_t));
			hash_init(myHash, 0);

/* action */
			if (ind_action >= 0) {
				v_action.arr[v_action.len] = '\0';
				PutField_CString(myHash, "action", (const char*)v_action.arr);
DEBUGLOG(("GetTxnEngineSpcActionDef:: action = [%s]\n", v_action.arr));
			}

/* returned_tag */
			if (ind_returned_tag >= 0) {
				v_returned_tag.arr[v_returned_tag.len] = '\0';
				PutField_CString(myHash, "returned_tag", (const char*)v_returned_tag.arr);
DEBUGLOG(("GetTxnEngineSpcActionDef:: returned_tag = [%s]\n", v_returned_tag.arr));
			}

/* returned_value */
			if (ind_returned_value >= 0) {
				v_returned_value.arr[v_returned_value.len] = '\0';
				PutField_CString(myHash, "returned_value", (const char*)v_returned_value.arr);
DEBUGLOG(("GetTxnEngineSpcActionDef:: returned_value = [%s]\n", v_returned_value.arr));
			}

			RecordSet_Add(myRec, myHash);
		}
		EXEC SQL CLOSE c_gettxnengspcactiondef;

		if (iCnt > 0) {
DEBUGLOG(("GetTxnEngineSpcActionDef:: hash added\n"));
		} else {
DEBUGLOG(("GetTxnEngineSpcActionDef:: no record found\n"));
ERRLOG("OLTxnEngineSpecialActionDef:: GetTxnEngineSpcActionDef:: no record found\n");
			iRet = PD_ERR;
		}
	}

DEBUGLOG(("GetTxnEngineSpcActionDef:: Normal Exit! iRet = [%d]\n", iRet));
	return iRet;

gettxnengspcactiondef_error:
DEBUGLOG(("gettxnengspcactiondef_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
ERRLOG("OLTxnEngineSpecialActionDef:: gettxnengspcactiondef_error code %d\n", sqlca.sqlcode);
ERRLOG("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc);
	EXEC SQL CLOSE c_gettxnengspcactiondef;
	EXEC SQL WHENEVER SQLERROR CONTINUE;
	return PD_ERR;
}

