int Add(const hash_t *hRls)
{
	char *csTmp;
	char cTmp;
	int	 iCommit = PD_TRUE;
	int iTmp;
	double	dTmp;

  EXEC SQL WHENEVER SQLERROR GOTO add_error;
  EXEC SQL WHENEVER NOTFOUND CONTINUE;
  EXEC SQL BEGIN DECLARE SECTION;

  short 		hv_return_value;
  varchar		hv_jnl_id[PD_JNL_ID_LEN];	
	int		hv_line_no;	
	int		hv_gl_id;	
	varchar		hv_currency_id[PD_CURRENCY_ID_LEN];	
	double		hv_txn_amt;	
	char		hv_cr_ind;	
	varchar		hv_remarks[PD_REMARKS_LEN];	
	int		hv_disabled;	
	varchar		hv_create_user[PD_CREATE_USER_LEN];	
	int		hv_txn_count;

	short		ind_jnl_id = -1;
	short		ind_line_no = -1;
	short		ind_gl_id = -1;
	short		ind_currency_id = -1;
	short		ind_txn_amt = -1;
	short		ind_cr_ind = -1;
	short		ind_remarks = -1;
	short		ind_disabled = -1;
	short		ind_create_user = -1;
	short		ind_txn_count = -1;

  EXEC SQL END DECLARE SECTION;

DEBUGLOG(("Add: Begin\n"));
		
	/* jnl_id */
	if (GetField_CString(hRls,"jnl_id",&csTmp)) {
		hv_jnl_id.len = strlen(csTmp);
		memcpy(hv_jnl_id.arr,csTmp,hv_jnl_id.len);
		ind_jnl_id = 0;
DEBUGLOG(("Add:jnl_id = [%.*s]\n",hv_jnl_id.len,hv_jnl_id.arr));
	} else {
DEBUGLOG(("Add:jnl_id not found\n"));
		return PD_ERR;
	}

	
	/* line_no */
	if (GetField_Int(hRls,"line_no",&iTmp)) {
		hv_line_no = iTmp;
		ind_line_no = 0;
DEBUGLOG(("Add:line_no = [%d]\n",hv_line_no));
	} else {
DEBUGLOG(("Add:line_no not found\n"));
		return PD_ERR;
	}
		
	/* gl_id */
	if (GetField_Int(hRls,"gl_id",&iTmp)) {
		hv_gl_id = iTmp;
		ind_gl_id = 0;
DEBUGLOG(("Add:gl_id = [%d]\n",hv_gl_id));
	} else {
DEBUGLOG(("Add:gl_id not found\n"));
		return PD_ERR;
	}
	
	/* currency_id */
	if (GetField_CString(hRls,"currency_id",&csTmp)) {
		hv_currency_id.len = strlen(csTmp);
		memcpy(hv_currency_id.arr,csTmp,hv_currency_id.len);
		ind_currency_id = 0;
DEBUGLOG(("Add:currency_id = [%.*s]\n",hv_currency_id.len,hv_currency_id.arr));
	} else {
DEBUGLOG(("Add:currency_id not found\n"));
		return PD_ERR;
	}
	
	/* txn_amt   */
	if (GetField_Double(hRls,"txn_amt",&dTmp)) {
		hv_txn_amt = dTmp;
		ind_txn_amt = 0;
DEBUGLOG(("Add:txn_amt = [%f]\n",hv_txn_amt));
	} else {
DEBUGLOG(("Add:txn_amt not found\n"));
		return PD_ERR;
	}

	
	/* cr_ind */ 
	if (GetField_Char(hRls,"cr_ind",&cTmp)) {
		hv_cr_ind = cTmp;
		ind_cr_ind = 0;
DEBUGLOG(("Add:cr_ind = [%c]\n",hv_cr_ind));
	} else {
DEBUGLOG(("Add:cr_ind not found\n"));
		return PD_ERR;
	}
	
	/* remarks */
	if (GetField_CString(hRls,"jd_remarks",&csTmp)) {
		hv_remarks.len = strlen(csTmp);
		memcpy(hv_remarks.arr,csTmp,hv_remarks.len);
		ind_remarks = 0;
DEBUGLOG(("Add:jd_remarks = [%.*s]\n",hv_remarks.len,hv_remarks.arr));
	}

	/* disabled */
	if (GetField_Int(hRls,"disabled",&iTmp)) {
		hv_disabled = iTmp;
		ind_disabled = 0;
DEBUGLOG(("Add:disabled = [%d]\n",hv_disabled));
	} else {
		hv_disabled = 0;
		ind_disabled = 0;
DEBUGLOG(("Add:disabled (default) = [%d]\n",hv_disabled));		
	}

	/* create_user */
	if (GetField_CString(hRls,"create_user",&csTmp)) {
		hv_create_user.len = strlen(csTmp);
		memcpy(hv_create_user.arr,csTmp,hv_create_user.len);
		ind_create_user = 0;
DEBUGLOG(("Add:create_user = [%.*s]\n",hv_create_user.len,hv_create_user.arr));
	} else {
DEBUGLOG(("Add:create_user not found\n"));
		return PD_ERR;
	}

	/* txn_count */
	if (GetField_Int(hRls,"txn_count",&iTmp)) {
		hv_txn_count = iTmp;
		ind_txn_count = 0;
DEBUGLOG(("Add:txn_count = [%d]\n",hv_txn_count));	
	}

	EXEC SQL EXECUTE
		BEGIN
		:hv_return_value := sp_crr_jnl_detail_insert(
		:hv_jnl_id:ind_jnl_id,
		:hv_line_no:ind_line_no,
		:hv_gl_id:ind_gl_id,
		:hv_currency_id:ind_currency_id,
		:hv_txn_amt:ind_txn_amt,
		:hv_cr_ind:ind_cr_ind,
		:hv_remarks:ind_remarks,
		:hv_disabled:ind_disabled,
		:hv_create_user:ind_create_user,
		:hv_txn_count:ind_txn_count
		);
    END;
  END-EXEC;

DEBUGLOG(("Add:Ret = [%d]\n",hv_return_value));
	if (hv_return_value == SP_OK) {
DEBUGLOG(("Add:Normal Exit\n"));
	if (iCommit == PD_TRUE)
		return PD_OK;
	}

	if (hv_return_value == SP_OTHER_ERR)  {
		ERRLOG("CrrJnlDetail_Add: SP_OTHER_ERR TxnAbort\n");
DEBUGLOG(("Add: SP_OTHER_ERR TxnAbort\n"));
		return PD_OTHER_ERR;
	}

	if (hv_return_value == SP_ERR)  {
		ERRLOG("CrrJnlDetail_Add: SP_ERR TxnAbort\n");
DEBUGLOG(("Add: SP_ERR TxnAbort\n"));
		return PD_ERR;
	}

add_error:
DEBUGLOG(("add_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
	EXEC SQL WHENEVER SQLERROR CONTINUE;
	ERRLOG("CrrJnlDetail_Add: SP_INTERNAL_ERR TxnAbort\n");
DEBUGLOG(("Add: SP_INTERNAL_ERR TxnAbort\n"));
	return PD_INTERNAL_ERR;
}

