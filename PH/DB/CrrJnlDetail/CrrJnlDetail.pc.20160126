int GetNextLineNo(const char* csJnlId)
{
  EXEC SQL WHENEVER SQLERROR GOTO GetNextLineNo_error;
  EXEC SQL WHENEVER NOTFOUND CONTINUE;

  EXEC SQL BEGIN DECLARE SECTION;

	varchar		hv_jnl_id[PD_JNL_ID_LEN];	
	int		hv_line_no;	

	short		ind_line_no = -1;

  EXEC SQL END DECLARE SECTION;

DEBUGLOG(("GetNextLineNo: Begin\n"));
		
	/* jnl_id */
	hv_jnl_id.len = strlen(csJnlId);
	memcpy(hv_jnl_id.arr,csJnlId,hv_jnl_id.len);
DEBUGLOG(("GetNextLineNo:jnl_id = [%.*s]\n",hv_jnl_id.len,hv_jnl_id.arr));

  EXEC SQL EXECUTE
		BEGIN
      SELECT max(LINE_NO) INTO :hv_line_no:ind_line_no
			FROM CRR_JNL_DETAIL 
			WHERE JNL_ID = :hv_jnl_id;
    END;
  END-EXEC;
        	
	if (ind_line_no == -1) {
		hv_line_no = 1;
	} else {
		hv_line_no = hv_line_no + 1;
	}

DEBUGLOG(("GetNextLineNo:line_no = [%d]\n",hv_line_no));
	
	return hv_line_no;

GetNextLineNo_error:
DEBUGLOG(("GetNextLineNo_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
	EXEC SQL WHENEVER SQLERROR CONTINUE;
	ERRLOG("CrrJnlDetail_GetNextLineNo: SP_INTERNAL_ERR TxnAbort\n");
DEBUGLOG(("Add: SP_INTERNAL_ERR TxnAbort\n"));
	return PD_INTERNAL_ERR;
}

