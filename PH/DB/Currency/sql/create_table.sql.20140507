ALTER TABLE CURRENCY
 DROP PRIMARY KEY CASCADE;

DROP TABLE CURRENCY CASCADE CONSTRAINTS;

CREATE TABLE CURRENCY
(
  CURRENCY_ID       VARCHAR2(3 BYTE)            NOT NULL,
  CURRENCY_NUM      VARCHAR2(3 BYTE)            NOT NULL,
  DISABLED          INTEGER                     DEFAULT 0                     NOT NULL,
  RESTRICTED        CHAR(1 BYTE)                DEFAULT 'N'                   NOT NULL,
  BUNDLED_CCY       VARCHAR2(3 BYTE),
  CREATE_USER       VARCHAR2(20 BYTE),
  CREATE_TIMESTAMP  DATE                        DEFAULT sysdate,
  UPDATE_USER       VARCHAR2(20 BYTE),
  UPDATE_TIMESTAMP  DATE                        DEFAULT sysdate,
  SUPPORT_DECIMAL   INTEGER,
  CURRENCY_DESC     VARCHAR2(50 BYTE)
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MAXSIZE          UNLIMITED
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN CURRENCY.DISABLED IS '0 - No, 1 - Yes';

COMMENT ON COLUMN CURRENCY.RESTRICTED IS 'N - No, Y - Yes';



