ALTER TABLE PSP_COSTS
 DROP PRIMARY KEY CASCADE;

DROP TABLE PSP_COSTS CASCADE CONSTRAINTS;

CREATE TABLE PSP_COSTS
(
  PC_PSP_ID                  VARCHAR2(10 BYTE),
  PC_TXN_TYPE                CHAR(1 BYTE),
  PC_EFFECT_DATE             DATE,
  PC_PRECAL_TYPE             CHAR(1 BYTE),
  PC_PRECAL_VALUE            NUMBER(12,5),
  PC_PRECAL_ADDITIONAL_VALUE NUMBER(12,2),
  PC_PRECAL_MIN_VALUE        NUMBER(12,2),
  PC_PRECAL_MAX_VALUE        NUMBER(12,2),
  PC_VALUE_TYPE              CHAR(1 BYTE),
  PC_SCALE                   INTEGER,
  PC_DISABLED                INTEGER            DEFAULT 0,
  PC_CREATE_TIMESTAMP        DATE               DEFAULT sysdate,
  PC_CREATE_USER             VARCHAR2(20 BYTE),
  PC_UPDATE_TIMESTAMP        DATE               DEFAULT sysdate,
  PC_UPDATE_USER             VARCHAR2(20 BYTE)
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN PSP_COSTS.PC_TXN_TYPE IS 'D - deposit, P - payout, S - settlement';

CREATE INDEX PSP_COSTS_IDX01 ON PSP_COSTS
(PC_PSP_ID, PC_EFFECT_DATE, PC_DISABLED)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


CREATE UNIQUE INDEX PSP_COSTS_PK ON PSP_COSTS
(PC_PSP_ID, PC_TXN_TYPE, PC_EFFECT_DATE)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE PSP_COSTS ADD (
  CONSTRAINT PSP_COSTS_PK
  PRIMARY KEY
  (PC_PSP_ID, PC_TXN_TYPE, PC_EFFECT_DATE)
  USING INDEX PSP_COSTS_PK
  ENABLE VALIDATE);

ALTER TABLE PSP_COSTS ADD (
  CONSTRAINT PSP_COSTS_FK01 
  FOREIGN KEY (PC_PSP_ID) 
  REFERENCES PSP_DETAIL (PSP_ID)
  ENABLE VALIDATE,
  CONSTRAINT PSP_COSTS_FK02 
  FOREIGN KEY (PC_VALUE_TYPE) 
  REFERENCES DEF_ROUNDING (DR_TYPE)
  ENABLE VALIDATE);
