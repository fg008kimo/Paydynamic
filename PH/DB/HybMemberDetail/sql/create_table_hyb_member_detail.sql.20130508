ALTER TABLE HYB_MEMBER_DETAIL
 DROP PRIMARY KEY CASCADE;

DROP TABLE HYB_MEMBER_DETAIL CASCADE CONSTRAINTS;

CREATE TABLE HYB_MEMBER_DETAIL
(
	EM_EMAIL    VARCHAR2(100) NOT NULL,
	EM_DOMAIN	NUMBER	NOT NULL,
	EM_PWD		VARCHAR2(100) NOT NULL,
	EM_FIRST_NAME	VARCHAR2(50) NOT NULL,
	EM_LAST_NAME	VARCHAR2(50) NOT NULL,
	EM_CHINESE_NAME	VARCHAR2(50) NOT NULL,
	EM_GENDER 	CHAR(1) NOT NULL,
	EM_DOB		VARCHAR2(8) NOT NULL,
	EM_DISABLED	NUMBER(1)	DEFAULT 0,
	EM_COUNTRY	NUMBER	NOT NULL,
	EM_CREATE_TIMESTAMP	DATE	DEFAULT SYSDATE,
	EM_UPDATE_TIMESTAMP	DATE	DEFAULT SYSDATE,
	EM_CREATE_USER	VARCHAR2(20),
	EM_UPDATE_USER	VARCHAR2(20)
)
TABLESPACE USER_DATA
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

CREATE UNIQUE INDEX HYB_MEMBER_DETAIL_PK ON HYB_MEMBER_DETAIL
(EM_EMAIL, EM_DOMAIN)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
NOPARALLEL;

ALTER TABLE HYB_MEMBER_DETAIL ADD (
  CONSTRAINT HYB_MEMBER_DETAIL_PK
  PRIMARY KEY
  (EM_EMAIL, EM_DOMAIN)
  USING INDEX HYB_MEMBER_DETAIL_PK);



