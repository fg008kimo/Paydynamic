ALTER TABLE HOLIDAY
 DROP PRIMARY KEY CASCADE;

DROP TABLE HOLIDAY CASCADE CONSTRAINTS;

CREATE TABLE HOLIDAY
(
  H_COUNTRY           VARCHAR2(2 BYTE)          NOT NULL,
  H_DATE              VARCHAR2(8 BYTE)          NOT NULL,
  H_DESC              VARCHAR2(50 BYTE),
  H_CREATE_USER       VARCHAR2(25 BYTE),
  H_UPDATE_USER       VARCHAR2(25 BYTE),
  H_CREATE_TIMESTAMP  DATE                      DEFAULT SYSDATE,
  H_UPDATE_TIMESTAMP  DATE                      DEFAULT SYSDATE,
  H_IS_NON_HOLIDAY    INTEGER			DEFAULT 0
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;


CREATE UNIQUE INDEX HOLIDAY_PK ON HOLIDAY
(H_COUNTRY, H_DATE)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE HOLIDAY ADD (
  CONSTRAINT HOLIDAY_PK
  PRIMARY KEY
  (H_COUNTRY, H_DATE)
  USING INDEX HOLIDAY_PK
  ENABLE VALIDATE);

