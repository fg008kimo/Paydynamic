int start_process()
{
	int     iRet = SUCCESS;

	int     iCnt;

	EXEC SQL WHENEVER SQLERROR GOTO get_error;
	EXEC SQL WHENEVER NOTFOUND CONTINUE;

	EXEC SQL BEGIN DECLARE SECTION;
		SQL_CURSOR      c_cursor_txn_data;
				
		varchar v_host_posting_date[PD_DATE_LEN];
		varchar v_txn_id[PD_TXN_ID_LEN +1];
		varchar v_merchant_id[PD_MERCHANT_ID_LEN +1];
		varchar v_psp_id[PD_PSP_ID_LEN + 1];
		varchar v_txn_code[PD_TXN_CODE_LEN +1];
		char    v_status;
		char    v_ar_ind;				
		varchar v_sub_status[PD_DESC_LEN +1];
               				
		short   ind_host_posting_date = -1;
		short   ind_txn_id = -1;
		short   ind_merchant_id = -1;
		short   ind_psp_id = -1;                
		short   ind_txn_code = -1;
		short   ind_status = -1;
		short   ind_ar_ind = -1;				
		short   ind_sub_status = -1;               
	EXEC SQL END DECLARE SECTION;

	EXEC SQL ALLOCATE :c_cursor_txn_data;

	EXEC SQL EXECUTE
		BEGIN
			:hv_return_value := sp_txn_snapshot(:c_cursor_txn_data);
		END;
	END-EXEC;

	if (hv_return_value == 1) {
DEBUGLOG(("start_process:txn no more record to be processed!\n"));
	}
	else if (hv_return_value == SP_OK) {
		iCnt = 0;

		for (;;) {
			ind_host_posting_date = -1;
			ind_txn_id = -1;
			ind_merchant_id = -1;
			ind_psp_id = -1;                
			ind_txn_code = -1;
			ind_status = -1;
			ind_ar_ind = -1;				
			ind_sub_status = -1;   

			EXEC SQL WHENEVER NOTFOUND DO break;
			EXEC SQL FETCH :c_cursor_txn_data
			INTO    :v_host_posting_date:ind_host_posting_date,
				:v_txn_id:ind_txn_id,
				:v_merchant_id:ind_merchant_id,
				:v_psp_id:ind_psp_id,
				:v_txn_code:ind_txn_code,
				:v_status:ind_status,
				:v_ar_ind:ind_ar_ind,
				:v_sub_status:ind_sub_status;
                             

			if (SQLCODE == SQL_NOT_FOUND) {
				break;
			}

			EXEC SQL EXECUTE
			BEGIN
                        :hv_ret_value := sp_txn_snapshot_insert(
					:v_host_posting_date:ind_host_posting_date,
					:v_txn_id:ind_txn_id,
					:v_merchant_id:ind_merchant_id,
					:v_psp_id:ind_psp_id,
					:v_txn_code:ind_txn_code,
					:v_status:ind_status,
					:v_ar_ind:ind_ar_ind,
					:v_sub_status:ind_sub_status);
                                                :hv_party_type:ind_party_type,
                                                :hv_code:ind_code,
                                                :hv_code_in_num:ind_code_in_num,
                                                :hv_dc_ind:ind_dc_ind,
                                                :hv_desc:ind_desc,
                                                :hv_dual_control:ind_dual_control,
                                                :hv_fee_type:ind_fee_type,
                                                :hv_disabled:ind_disabled,
                                                :hv_create_user:ind_create_user);
                END;
        END-EXEC;

}



