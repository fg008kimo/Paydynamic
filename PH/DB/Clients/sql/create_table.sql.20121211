ALTER TABLE CPHUSER.CLIENTS
 DROP PRIMARY KEY CASCADE;

DROP TABLE CPHUSER.CLIENTS CASCADE CONSTRAINTS;

CREATE TABLE CPHUSER.CLIENTS
(
  CLIENT_ID         VARCHAR2(10 BYTE),
  CUSTOMER_ID       VARCHAR2(10 BYTE),
  TYPE              CHAR(1 BYTE),
  CREATE_TIMESTAMP  DATE,
  UPDATE_TIMESTAMP  DATE,
  CREATE_USER       VARCHAR2(20 BYTE),
  UPDATE_USER       VARCHAR2(20 BYTE)
)
TABLESPACE USER_DATA
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN CPHUSER.CLIENTS.TYPE IS 'P - PSP M - Merchant';


CREATE UNIQUE INDEX CPHUSER.CLIENTS_PK ON CPHUSER.CLIENTS
(CLIENT_ID, CUSTOMER_ID)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
           )
NOPARALLEL;


ALTER TABLE CPHUSER.CLIENTS ADD (
  CONSTRAINT CLIENTS_PK
  PRIMARY KEY
  (CLIENT_ID, CUSTOMER_ID)
  USING INDEX CPHUSER.CLIENTS_PK);

