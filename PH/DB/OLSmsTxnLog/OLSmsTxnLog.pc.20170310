int Add(const hash_t* hTxn, const hash_t* hText) {
	char *csTmp;
	char *csReqStatus;
	char *csReqBankDate;
	char *csReqBankHour;
	char *csReqBankMinute;
	time_t tNow;
	struct tm tStruct;
	char csBuf[PD_TMP_BUF_LEN];

	tNow = time(0);
	tStruct = *localtime(&tNow);

	EXEC SQL WHENEVER SQLERROR GOTO add_error;
