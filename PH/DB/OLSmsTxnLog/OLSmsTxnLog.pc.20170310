		/* req bank channel */
		if (GetField_CString(hText, "req_bank_channel", &csTmp)) {
			hv_req_bank_channel.len = strlen(csTmp);
			strncpy((char *)hv_req_bank_channel.arr, csTmp, hv_req_bank_channel.len);
