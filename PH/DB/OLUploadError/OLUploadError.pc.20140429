#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include <sqlca.h>
#include <time.h>
#include "common.h"
#include "utilitys.h"
#include "dbutility.h"
#include "OLUploadError.h"

#define SQLCA_STORAGE_CLASS extern
#define SQLCODE sqlca.sqlcode


char	cDebug;

void OLUploadError(char	cdebug)
{
	cDebug = cdebug;
}


int AddError(const hash_t *hRls)
{
	char	*csTmp;
	//int	iTmp;
	int	iResultCnt;

	char	*csTag = (char*) malloc (64);

	EXEC SQL WHENEVER SQLERROR GOTO adderr_error;
	EXEC SQL WHENEVER NOTFOUND CONTINUE;

	EXEC SQL BEGIN DECLARE SECTION;
		varchar		hv_input_channel[PD_INPUT_CHANNEL_LEN];
		varchar		hv_filename[PD_UPLOAD_FILENAME_LEN];
		varchar		hv_file_id[PD_TXN_SEQ_LEN];
		varchar		hv_line[PD_TMP_BUF_LEN];
		varchar		hv_result[PD_TMP_BUF_LEN];
		varchar		hv_create_user[PD_USER_LEN];

		short		ind_input_channel = -1;
		short		ind_filename = -1;
		short		ind_file_id = -1;
		short		ind_line = -1;
		short		ind_result = -1;
		short		ind_create_user = -1;

		short		hv_return_value;

	EXEC SQL END DECLARE SECTION;

	if(GetField_CString(hRls,"input_channel",&csTmp)) {
		hv_input_channel.len = strlen(csTmp);
		strncpy((char*)hv_input_channel.arr, csTmp, hv_input_channel.len);
		ind_input_channel = 0;
DEBUGLOG(("AddError:input_channel = [%.*s]\n",hv_input_channel.len, hv_input_channel.arr));
	}

	if(GetField_CString(hRls,"file_id",&csTmp)) {
		hv_file_id.len = strlen(csTmp);
		strncpy((char*)hv_file_id.arr, csTmp, hv_file_id.len);
		ind_file_id = 0;
DEBUGLOG(("AddError:file_id = [%.*s]\n",hv_file_id.len, hv_file_id.arr));
	}

	if(GetField_CString(hRls,"in_file_name",&csTmp)) {
		hv_filename.len = strlen(csTmp);
		strncpy((char*)hv_filename.arr, csTmp, hv_filename.len);
		ind_filename = 0;
DEBUGLOG(("AddError:filename = [%.*s]\n",hv_filename.len, hv_filename.arr));
	}

	if(GetField_CString(hRls,"create_user",&csTmp)) {
		hv_create_user.len = strlen(csTmp);
		strncpy((char*)hv_create_user.arr, csTmp, hv_create_user.len);
		ind_create_user = 0;
DEBUGLOG(("AddError:create_user = [%.*s]\n",hv_create_user.len, hv_create_user.arr));
	}

	if (GetField_Int(hRls,"result_cnt",&iResultCnt)) {
DEBUGLOG(("AddError:result_cnt = [%d]\n",iResultCnt));
		int i;
		for (i=1;i<=iResultCnt;i++) {
			hv_result.len = 0;
			strcpy((char*)hv_result.arr,"");
			ind_result = -1;
			hv_line.len = 0;
			strcpy((char*)hv_line.arr,"");
			ind_line = -1;

			/*
			sprintf(csTag,"msg_%d",i);
			if (GetField_CString(hRls,csTag,&csTmp)) {
				strncat((char*)hv_result.arr, csTmp, PD_TMP_BUF_LEN-strlen((char*)hv_result.arr)-1);
				hv_result.len = strlen((char*)hv_result.arr);
				ind_result = 0;
			}
			*/

			sprintf(csTag,"desc_%d",i);
			if (GetField_CString(hRls,csTag,&csTmp)) {
				strncat((char*)hv_result.arr, csTmp, PD_TMP_BUF_LEN-strlen((char*)hv_result.arr)-1);
				hv_result.len = strlen((char*)hv_result.arr);
				ind_result = 0;
			}

			/*
			sprintf(csTag,"line_%d",i);
			if (GetField_Int(hRls,csTag,&iTmp)) {
				sprintf(csTag, " at line %d", iTmp);
				strncat((char*)hv_result.arr, csTag, PD_TMP_BUF_LEN-strlen((char*)hv_result.arr)-1);
				hv_result.len = strlen((char*)hv_result.arr);
				ind_result = 0;
			}
			*/
DEBUGLOG(("AddError: result_%d = [%.*s]\n",i,hv_result.len,hv_result.arr));

			sprintf(csTag,"line_%d",i);
			if (GetField_CString(hRls,csTag,&csTmp)) {
				snprintf((char*)hv_line.arr, PD_TMP_BUF_LEN, "%s", csTmp);
				hv_line.len = strlen((char*)hv_line.arr);
				ind_line = 0;
			}
DEBUGLOG(("AddError: %s = [%.*s]\n",csTag,hv_line.len,hv_line.arr));

			EXEC SQL EXECUTE
				BEGIN
					:hv_return_value := sp_ol_upload_error_insert(
								:hv_input_channel:ind_input_channel,
								:hv_filename:ind_filename,
								:hv_file_id:ind_file_id,
								:hv_line:ind_line,
								:hv_result:ind_result,
								:hv_create_user:ind_create_user);
				END;
			END-EXEC;

DEBUGLOG(("AddError: return_value = [%d]\n",hv_return_value));

			if (hv_return_value == SP_OTHER_ERR) {
ERRLOG("OLUploadError_AddError: SP_OTHER_ERR TxnAbort\n");
DEBUGLOG(("AddError: SP_OTHER_ERR TxnAbort\n"));
				return PD_OTHER_ERR;
			}

			if (hv_return_value == SP_ERR) {
ERRLOG("OLUploadError_AddError: SP_ERR TxnAbort\n");
DEBUGLOG(("AddError: SP_ERR TxnAbort\n"));
				return PD_ERR;
			}
		}
	}


	FREE_ME(csTag);

DEBUGLOG(("AddError:Normal Exit\n"));
	return PD_OK;

adderr_error:
DEBUGLOG(("adderr_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
ERRLOG("OLUploadError_AddError: SP_INTERNAL_ERR TxnAbort\n");
	EXEC SQL WHENEVER SQLERROR CONTINUE;
	return PD_ERR;
}

