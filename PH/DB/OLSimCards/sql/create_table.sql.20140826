CREATE TABLE OL_SIM_CARDS
(
  OSC_MOBILE		VARCHAR2(20 BYTE),
  OSC_CARRIES		VARCHAR2(50 BYTE),
  OSC_SIM_CREDIT	NUMBER(12,2),
  OSC_SIM_PACKAGE	NUMBER(12,2),
  OSC_BILLED_DATE	INTEGER,
  OSC_LAST_TOPUP_DATE	VARCHAR2(8 BYTE),
  OSC_NEXT_TOPUP_DATE	VARCHAR2(8 BYTE),
  OSC_PASSWORD		VARCHAR2(40 BYTE),
  OSC_ACTIVE		INTEGER			DEFAULT 0,
  OSC_CREATE_TIMESTAMP  DATE			DEFAULT SYSDATE,
  OSC_CREATE_USER       VARCHAR2(20 BYTE),
  OSC_UPDATE_TIMESTAMP  DATE			DEFAULT SYSDATE,
  OSC_UPDATE_USER       VARCHAR2(20 BYTE)
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;


CREATE UNIQUE INDEX OL_SIM_CARDS_PK ON OL_SIM_CARDS
(OSC_MOBILE)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE OL_SIM_CARDS ADD (
