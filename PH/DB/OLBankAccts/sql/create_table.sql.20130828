ALTER TABLE PHUSER.OL_BANK_ACCTS
 DROP PRIMARY KEY CASCADE;

DROP TABLE PHUSER.OL_BANK_ACCTS CASCADE CONSTRAINTS;

CREATE TABLE PHUSER.OL_BANK_ACCTS
(
  OB_INT_BANK_CODE      VARCHAR2(10 BYTE),
  OB_BANK_ACCT_NUM      VARCHAR2(50 BYTE),
  OB_ACCT_CCY           VARCHAR2(3 BYTE),
  OB_ACCT_TYPE          CHAR(3 BYTE),
  OB_SHARED_ACCT        INTEGER                 DEFAULT 0,
  OB_RECEIVED_DATETIME  DATE,
  OB_RECEIVED_BY        VARCHAR2(20 BYTE),
  OB_REGISTERED_MOBILE   VARCHAR2(20 BYTE),
  OB_STATUS_TYPE        VARCHAR2(2 BYTE),
  OB_PROVIDER_ID        VARCHAR2(10 BYTE),
  OB_CREATE_TIMESTAMP   DATE,
  OB_CREATE_USER        VARCHAR2(20 BYTE),
  OB_UPDATE_TIMESTAMP   DATE,
  OB_UPDATE_USER        VARCHAR2(20 BYTE)
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN PHUSER.OL_BANK_ACCTS.OB_SHARED_ACCT IS '1 - yes 0 -no';



CREATE UNIQUE INDEX PHUSER.OL_BANK_ACCTS_PK ON PHUSER.OL_BANK_ACCTS
(OB_INT_BANK_CODE, OB_BANK_ACCT_NUM)
LOGGING
TABLESPACE USER_DATA
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE PHUSER.OL_BANK_ACCTS ADD (
  CONSTRAINT OL_BANK_ACCTS_PK
  PRIMARY KEY
  (OB_INT_BANK_CODE, OB_BANK_ACCT_NUM)
  USING INDEX PHUSER.OL_BANK_ACCTS_PK
  ENABLE VALIDATE);

ALTER TABLE PHUSER.OL_BANK_ACCTS ADD (
  CONSTRAINT OL_BANK_ACCTS_FK01 
  FOREIGN KEY (OB_STATUS_TYPE) 
  REFERENCES PHUSER.DEF_STATUS (DS_TYPE)
  ENABLE VALIDATE,
  CONSTRAINT OL_BANK_ACCTS_FK02 
  FOREIGN KEY (OB_INT_BANK_CODE) 
  REFERENCES PHUSER.DEF_BANK (DB_INT_BANK_CODE)
  ENABLE VALIDATE,
  CONSTRAINT OL_BANK_ACCTS_FK03 
  FOREIGN KEY (OB_PROVIDER_ID) 
  REFERENCES PHUSER.PSP_MASTER (PM_CLIENT_ID)
  ENABLE VALIDATE);

