ALTER TABLE OL_BANK_ACCTS
 DROP PRIMARY KEY CASCADE;

DROP TABLE OL_BANK_ACCTS CASCADE CONSTRAINTS;

CREATE TABLE OL_BANK_ACCTS
(
  OB_INT_BANK_CODE         VARCHAR2(10 BYTE),
  OB_BANK_ACCT_NUM         VARCHAR2(50 BYTE),
  OB_ACCT_CCY              VARCHAR2(3 BYTE),
  OB_SHARED_ACCT           INTEGER              DEFAULT 0,
  OB_RECEIVED_DATETIME     DATE,
  OB_RECEIVED_BY           VARCHAR2(20 BYTE),
  OB_REGISTERED_MOBILE     VARCHAR2(20 BYTE),
  OB_STATUS_TYPE           VARCHAR2(2 BYTE),
  OB_INIT_PROVIDER_ID      VARCHAR2(10 BYTE),
  OB_CREATE_TIMESTAMP      DATE,
  OB_CREATE_USER           VARCHAR2(20 BYTE),
  OB_UPDATE_TIMESTAMP      DATE,
  OB_UPDATE_USER           VARCHAR2(20 BYTE),
  OB_BANK_ACCT_NAME        VARCHAR2(50 BYTE)    NOT NULL,
  OB_OWNER_NAME            VARCHAR2(50 BYTE)    NOT NULL,
  OB_BRANCH_NAME           VARCHAR2(150 BYTE)   NOT NULL,
  OB_BANK_ACCT_SHORT_NAME  VARCHAR2(20 BYTE),
  OB_BRANCH_CODE           VARCHAR2(50 BYTE),
  OB_OWNER_ID              VARCHAR2(20 BYTE),
  OB_SWIFT_CODE            VARCHAR2(20 BYTE),
  OB_REMARK                VARCHAR2(255 BYTE),
  OB_SUPPORT_SMS_STMT      INTEGER              DEFAULT 0,
  OB_SYS_SWITCH_ENABLED    INTEGER              DEFAULT 1,
  OB_IS_MORE_RESTRICTED    INTEGER              DEFAULT 0
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MAXSIZE          UNLIMITED
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN OL_BANK_ACCTS.OB_SHARED_ACCT IS '1 - yes 0 -no';

COMMENT ON COLUMN OL_BANK_ACCTS.OB_SUPPORT_SMS_STMT IS '1 - yes 0 -no';



CREATE UNIQUE INDEX OL_BANK_ACCTS_PK ON OL_BANK_ACCTS
(OB_INT_BANK_CODE, OB_BANK_ACCT_NUM)
LOGGING
TABLESPACE USER_IDX
PCTFREE    10
INITRANS   2
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MAXSIZE          UNLIMITED
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
NOPARALLEL;


ALTER TABLE OL_BANK_ACCTS ADD (
  CONSTRAINT OL_BANK_ACCTS_PK
  PRIMARY KEY
  (OB_INT_BANK_CODE, OB_BANK_ACCT_NUM)
  USING INDEX OL_BANK_ACCTS_PK
  ENABLE VALIDATE);

ALTER TABLE OL_BANK_ACCTS ADD (
  CONSTRAINT OL_BANK_ACCTS_FK01 
  FOREIGN KEY (OB_STATUS_TYPE) 
  REFERENCES OL_DEF_ACCT_STATUS (AS_TYPE)
  ENABLE VALIDATE,
  CONSTRAINT OL_BANK_ACCTS_FK02 
  FOREIGN KEY (OB_INT_BANK_CODE) 
  REFERENCES DEF_BANK (DB_INT_BANK_CODE)
  ENABLE VALIDATE,
  CONSTRAINT OL_BANK_ACCTS_FK03 
  FOREIGN KEY (OB_INIT_PROVIDER_ID) 
  REFERENCES PSP_MASTER (PM_CLIENT_ID)
  ENABLE VALIDATE,
  CONSTRAINT OL_BANK_ACCTS_FK04 
  FOREIGN KEY (OB_ACCT_CCY) 
  REFERENCES DEF_CURRENCY (DC_CCY_ID)
  ENABLE VALIDATE,
  CONSTRAINT OL_BANK_ACCTS_FK05 
  FOREIGN KEY (OB_REGISTERED_MOBILE) 
  REFERENCES OL_SIM_CARDS (OSC_MOBILE)
  ENABLE VALIDATE);

