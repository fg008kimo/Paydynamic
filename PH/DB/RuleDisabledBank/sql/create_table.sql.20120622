DROP TABLE RULE_DISABLED_BANK CASCADE CONSTRAINTS;

CREATE TABLE RULE_DISABLED_BANK
(
  RB_BANK_CODE         VARCHAR2(10 BYTE)        NOT NULL,
  RB_TYPE              CHAR(1 BYTE)             NOT NULL,
  RB_CHANNEL_CODE      CHAR(3 BYTE),
  RB_PARTY_ID          VARCHAR2(10 BYTE),
  RB_SCHEDULER_ID      INTEGER                  NOT NULL,
  RB_NOTE_ID		INTEGER,
  RB_DISABLED          INTEGER                  DEFAULT 0,
  RB_CREATE_USER       VARCHAR2(20 BYTE),
  RB_CREATE_TIMESTAMP  DATE                     DEFAULT sysdate,
  RB_UPDATE_USER       VARCHAR2(20 BYTE),
  RB_UPDATE_TIMESTAMP  DATE                     DEFAULT sysdate
)
TABLESPACE USER_DATA
RESULT_CACHE (MODE DEFAULT)
PCTUSED    0
PCTFREE    10
INITRANS   1
MAXTRANS   255
STORAGE    (
            INITIAL          64K
            NEXT             1M
            MINEXTENTS       1
            MAXEXTENTS       UNLIMITED
            PCTINCREASE      0
            BUFFER_POOL      DEFAULT
            FLASH_CACHE      DEFAULT
            CELL_FLASH_CACHE DEFAULT
           )
LOGGING 
NOCOMPRESS 
NOCACHE
NOPARALLEL
MONITORING;

COMMENT ON COLUMN RULE_DISABLED_BANK.RB_TYPE IS '''G'' - Global, ''C'' - Client, ''P'' - PSP';

COMMENT ON COLUMN RULE_DISABLED_BANK.RB_CHANNEL_CODE IS 'for rb_type = ''G'' ';

COMMENT ON COLUMN RULE_DISABLED_BANK.RB_PARTY_ID IS 'for rb_type = ''C'' or ''P''';
COMMENT ON COLUMN RULE_DISABLED_BANK.RB_NOTE_ID IS 'refer to ron_note_id of rule_outage_note';



