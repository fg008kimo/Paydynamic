int parse_arg(int argc,char **argv)
{
        char    c;
        strcpy(cs_txn_date,"");

        while ((c = getopt(argc,argv,"d:")) != EOF) {
                switch (c) {
                        case 'd':
                                strcpy(cs_txn_date, optarg);
                                break;
                        default:
                                return FAILURE;
                }
        }

        if (!strcmp(cs_txn_date,"")) 
                return FAILURE;

        return SUCCESS;
}
