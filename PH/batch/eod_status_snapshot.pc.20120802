int batch_proc(int argc, char* argv[])
{
	int     iRet;

	iRet = parse_arg(argc, argv);

	if (iRet != SUCCESS) {
		printf("usage:  -d txn_date\n");
		return (iRet);
        }


	iRet = start_process((unsigned char*) cs_txn_date);

	return iRet;

}


