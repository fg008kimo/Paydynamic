#define NUM_OF_EXPIRY_DAY	14
int	num_of_day = NUM_OF_EXPIRY_DAY;

char    cDebug  = 'Y';

OBJPTR(DB);

int parse_arg(int argc,char **argv);
int delete_old_record();

int batch_init(int argc, char* argv[])
{
	return SUCCESS;
}


int batch_proc(int argc, char* argv[])
{
        int     iRet;

	iRet = parse_arg(argc,argv);
	if(iRet == SUCCESS)
		iRet = delete_old_record();

	return iRet;
}


int batch_terminate(int argc, char* argv[])
{
	return SUCCESS;
}


int delete_old_record()
{
	int	iRet = SUCCESS;

	EXEC SQL WHENEVER SQLERROR GOTO update_error;
        EXEC SQL WHENEVER NOTFOUND CONTINUE;

        EXEC SQL BEGIN DECLARE SECTION;
		int	hv_num_of_day;

        EXEC SQL END DECLARE SECTION;

	hv_num_of_day = num_of_day;

        EXEC SQL 
		delete from ol_payout_generated_tmp
		where opt_create_timestamp < sysdate - :hv_num_of_day;

	return iRet;

update_error:
DEBUGLOG(("delete_old_record error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
    EXEC SQL WHENEVER SQLERROR CONTINUE;
    EXEC SQL ROLLBACK RELEASE;
    return FAILURE;
}


int parse_arg(int argc,char **argv)
{
        char    c;
	//char	cs_num_of_day[PD_DATE_LEN];
	//cs_num_of_day[0]='\0';

        while ((c = getopt(argc,argv,"d:")) != EOF) {
                switch (c) {
                        case 'd':
                                //strcpy(cs_num_of_day,optarg);
                                num_of_day = atoi(optarg);
                                break;
                        default:
                                return FAILURE;
                }
        }

        return SUCCESS;
}
