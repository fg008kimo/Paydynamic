DROP VIEW CRR_REC_DEPOSIT_VIEW;

CREATE OR REPLACE FORCE VIEW CRR_REC_DEPOSIT_VIEW
(
   CR_TXN_DATE,
   CR_COUNTRY,
   CR_PRODUCT,
   TE_PARTY_TYPE,
   PARTY_ID,
   CR_CURRENCY,
   CR_JNL_TYPE_ID,
   CR_JNL_ENTRY_TYPE_ID,
   CR_IND,
   CR_GL_ID,
   TXN_COUNT,
   CR_AMOUNT
)
AS
     SELECT PR_RECON_DATE,
            CR_COUNTRY_ID,
            CR_PRODUCT_CODE,
            CR_PARTY_TYPE,
            '' PARTY_ID,
            PR_TXN_CCY,
            CR_JNL_TYPE_ID,
            CR_JNL_ENTRY_TYPE_ID,
            CASE
               WHEN CR_CREDIT_GL_ID <> 0 THEN 'C'
               WHEN CR_DEBIT_GL_ID IS NOT NULL THEN 'D'
               ELSE ''
            END
               CR_IND,
            CASE
               WHEN CR_CREDIT_GL_ID <> 0 THEN CR_CREDIT_GL_ID
               WHEN CR_DEBIT_GL_ID IS NOT NULL THEN CR_DEBIT_GL_ID
               ELSE 0
            END
               CR_GL_ID,
            COUNT (DISTINCT PR_ID) TXN_COUNT,
            SUM (PR_INPUT_FEE) CR_AMOUNT
       FROM PSP_RECON_HISTORY,
            (SELECT *
               FROM CRR_RULE_POSTING
              WHERE     CR_PARTY_TYPE = 'G'
                    AND CR_JNL_ENTRY_TYPE_ID = 'PSP_COST'
                    AND CR_TXN_CODE = 'PBU'
                    AND CR_DISABLED = 0),
            PSP_DETAIL,
            (SELECT * FROM CRR_PSP_PRODUCT_CODE_MAP WHERE PM_DISABLED = 0)
      WHERE     PR_TXN_COUNTRY = CR_COUNTRY_ID
            AND PR_PSP_ID = PSP_ID
            AND PM_PSP_ID = PSP_ID
            AND PM_BUSINESS_TYPE = PSP_TYPE
            AND PM_PRODUCT_CODE = CR_PRODUCT_CODE
   GROUP BY PR_RECON_DATE, 
            CR_COUNTRY_ID,
            CR_PRODUCT_CODE,
            CR_PARTY_TYPE,
            PR_TXN_CCY,
            CR_JNL_TYPE_ID,
            CR_JNL_ENTRY_TYPE_ID,
            CR_CREDIT_GL_ID,
            CR_DEBIT_GL_ID
   UNION ALL
     SELECT PR_RECON_DATE,
            CR_COUNTRY_ID,
            CR_PRODUCT_CODE,
            CR_PARTY_TYPE,
            '' PARTY_ID,
            PR_TXN_CCY,
            CR_JNL_TYPE_ID,
            CR_JNL_ENTRY_TYPE_ID,
            CASE
               WHEN CR_CREDIT_GL_ID <> 0 THEN 'C'
               WHEN CR_DEBIT_GL_ID IS NOT NULL THEN 'D'
               ELSE ''
            END
               CR_IND,
            CASE
               WHEN CR_CREDIT_GL_ID <> 0 THEN CR_CREDIT_GL_ID
               WHEN CR_DEBIT_GL_ID IS NOT NULL THEN CR_DEBIT_GL_ID
               ELSE 0
            END
               CR_GL_ID,
            COUNT (DISTINCT PR_ID) TXN_COUNT,
            SUM (PR_INPUT_FEE) CR_AMOUNT
       FROM PSP_RECON_HISTORY,
            (SELECT *
               FROM CRR_RULE_POSTING
              WHERE     CR_PARTY_TYPE = 'P'
                    AND CR_JNL_ENTRY_TYPE_ID = 'D_PSP_COST'
                    AND CR_TXN_CODE = 'PBU'
                    AND CR_DISABLED = 0),
            PSP_DETAIL,
            (SELECT * FROM CRR_PSP_PRODUCT_CODE_MAP WHERE PM_DISABLED = 0)
      WHERE     PR_TXN_COUNTRY = CR_COUNTRY_ID
            AND PR_PSP_ID = CR_PARTY_ID
            AND PR_PSP_ID = PSP_ID
            AND PM_PSP_ID = PSP_ID
            AND PM_BUSINESS_TYPE = PSP_TYPE
            AND PM_PRODUCT_CODE = CR_PRODUCT_CODE
   GROUP BY PR_RECON_DATE, 
            CR_COUNTRY_ID,
            CR_PRODUCT_CODE,
            CR_PARTY_TYPE,
            PR_PSP_ID,
            PR_TXN_CCY,
            CR_JNL_TYPE_ID,
            CR_JNL_ENTRY_TYPE_ID,
            CR_CREDIT_GL_ID,
            CR_DEBIT_GL_ID
   UNION ALL
     SELECT PR_RECON_DATE,
            CR_COUNTRY_ID,
            CR_PRODUCT_CODE,
            CR_PARTY_TYPE,
            PR_PSP_ID,
            PR_TXN_CCY,
            CR_JNL_TYPE_ID,
            CR_JNL_ENTRY_TYPE_ID,
            CASE
               WHEN CR_CREDIT_GL_ID <> 0 THEN 'C'
