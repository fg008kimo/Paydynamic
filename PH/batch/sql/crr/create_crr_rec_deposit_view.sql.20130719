            CASE
               WHEN CR_CREDIT_GL_ID <> 0 THEN CR_CREDIT_GL_ID
               WHEN CR_DEBIT_GL_ID IS NOT NULL THEN CR_DEBIT_GL_ID
               ELSE 0
            END
               CR_GL_ID,
            COUNT (DISTINCT PR_ID) TXN_COUNT,
            SUM (PR_TXN_AMOUNT) CR_AMOUNT
       FROM PSP_RECON_HISTORY,
            (SELECT *
               FROM CRR_RULE_POSTING
              WHERE     CR_PARTY_TYPE = 'P'
                    AND CR_JNL_ENTRY_TYPE_ID = 'S_TXN_AMT'
                    AND CR_TXN_CODE = 'PBU'
                    AND CR_DISABLED = 0),
            PSP_DETAIL,
            (SELECT * FROM CRR_PSP_PRODUCT_CODE_MAP WHERE PM_DISABLED = 0)
      WHERE     PR_TXN_COUNTRY = CR_COUNTRY_ID
            AND PR_PSP_ID = CR_PARTY_ID
            AND PR_PSP_ID = PSP_ID
            AND PM_PSP_ID = PSP_ID
            AND PM_BUSINESS_TYPE = PSP_TYPE
            AND PM_PRODUCT_CODE = CR_PRODUCT_CODE
   GROUP BY PR_RECON_DATE, 
