create or replace view PO_RES_SUMM_view as 
select   clients.client_id as client_id,
         client_name as client_name,
         mr_merchant_id as merchant_id,
         name as merchant_name,
         mr_country_id as country_code,
         country_name as country,
         mr_service_code as service_code,
         sc_code as service_desc,
         mr_currency_id as currency,         
         mr_status as status,
         mr_reserved_amount as sun_res_amt,
         to_char(mr_effect_date, 'YYYYMMDDHH24MISS') as sun_effect_date,
         mr_reserved_amount as mon_res_amt,
         to_char(mr_effect_date, 'YYYYMMDDHH24MISS') as mon_effect_date,
         mr_reserved_amount as tue_res_amt,
         to_char(mr_effect_date, 'YYYYMMDDHH24MISS') as tue_effect_date,
         mr_reserved_amount as wed_res_amt,
         to_char(mr_effect_date, 'YYYYMMDDHH24MISS') as wed_effect_date,   
         mr_reserved_amount as thu_res_amt,
         to_char(mr_effect_date, 'YYYYMMDDHH24MISS') as thu_effect_date,        
         mr_reserved_amount as fri_res_amt,
         to_char(mr_effect_date, 'YYYYMMDDHH24MISS') as fri_effect_date,      
         mr_reserved_amount as sat_res_amt,
         to_char(mr_effect_date, 'YYYYMMDDHH24MISS') as sat_effect_date                   
from clients, def_service_code, country, merch_detail, merchant_reserved_amt 
where mr_merchant_id =merchant_id 
and mr_country_id = country_code
and mr_service_code = sc_code
and merch_detail.client_id = clients.client_id
and rownum = 1
/
