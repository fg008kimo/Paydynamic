int batch_proc(int argc, char* argv[])
{
	int     iRet = parse_arg(argc,argv);

	if (iRet != SUCCESS) {
		return FAILURE;
	}

	if (iRet == SUCCESS) {
		iRet = InsertTxnAlertLog(cs_date, cs_rpt_type);
	}

	if (iRet == SUCCESS) {
		iRet = SendEmailByRptType(cs_rpt_type);
	}

	return iRet;
}


