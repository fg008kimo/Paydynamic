int process_txn();

int batch_init(int argc, char* argv[])
{
        return SUCCESS;
}


int batch_proc(int argc, char* argv[])
{
	int     iRet = SUCCESS;

	iRet = process_txn();

	if (iRet == PD_OK) {
DEBUGLOG(("Completed!!\n"));
		iRet = SUCCESS;
	} else {
DEBUGLOG(("Failure!!\n"));
		iRet = FAILURE;
		TxnAbort();
	}

	return iRet;
}


int batch_terminate(int argc, char* argv[])
{
        return SUCCESS;
}


int process_txn()
{
	int iRet = PD_ERR;

	//char *csTmp = NULL;

	EXEC SQL WHENEVER SQLERROR GOTO processtxn_error;
        EXEC SQL WHENEVER NOTFOUND CONTINUE;

        EXEC SQL BEGIN DECLARE SECTION;
		short           hv_return_value;


                varchar         v_msg[1024*4+1];
		short		ind_msg = -1;
		
        EXEC SQL END DECLARE SECTION;

DEBUGLOG(("process_txn : Begin\n"));
	
        EXEC SQL EXECUTE
                BEGIN
			:hv_return_value := sp_ol_merchant_balance_refresh(:v_msg:ind_msg);
                END;
        END-EXEC;

DEBUGLOG((" hv_return_value = [%d]\n", hv_return_value));

        if (hv_return_value != SP_OK)
        {
DEBUGLOG((" v_msg = [%.*s]\n", v_msg.len, v_msg.arr));
        } else {
		iRet = PD_OK;
	}


DEBUGLOG(("process_txn: iRet = [%d]\n", iRet));
	return iRet;

processtxn_error:
DEBUGLOG(("processtxn_error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
        EXEC SQL WHENEVER SQLERROR CONTINUE;
        return PD_ERR;
}

