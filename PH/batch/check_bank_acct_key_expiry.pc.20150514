int batch_proc(int argc, char* argv[])
{
	int     iRet = parse_arg(argc,argv);
	int	iChk = 0;

	hash_t *hContext;

	if (iRet != SUCCESS) {
		iTplType = 0;
	}

	hContext = (hash_t*) malloc (sizeof(hash_t));
	hash_init(hContext,0);

	EXEC SQL WHENEVER SQLERROR GOTO sql_error;
	EXEC SQL WHENEVER NOTFOUND CONTINUE;

	EXEC SQL BEGIN DECLARE SECTION;

		varchar v_alert_date[PD_DATE_LEN+1];
		short	ind_alert_date = -1;

		varchar	v_bank_name[PD_BANK_NAME_LEN+1];
		varchar	v_bank_acct_num[PD_BANK_ACCT_NUM_LEN+1];
		varchar v_acct_ccy[PD_CCY_ID_LEN+1];
		varchar	v_owner_name[PD_NAME_LEN+1];
		varchar	v_key_expiry_date[PD_DATE_LEN+1];

		short	ind_bank_name = -1;
		short	ind_bank_acct_num = -1;
		short	ind_acct_ccy = -1;
		short	ind_owner_name = -1;
		short	ind_key_expiry_date = -1;

	EXEC SQL END DECLARE SECTION;

	EXEC SQL DECLARE c_cursor_getalertdate CURSOR FOR
		SELECT	TO_CHAR(TRUNC(SYSDATE)+14,'YYYYMMDD')
		FROM	DUAL;

	EXEC SQL OPEN c_cursor_getalertdate;
	do {
		EXEC SQL FETCH c_cursor_getalertdate
		INTO
			:v_alert_date:ind_alert_date;

		if (SQLCODE == SQL_NOT_FOUND) {
			break;
		}
	}
	while(PD_TRUE);
	EXEC SQL CLOSE c_cursor_getalertdate;

	EXEC SQL DECLARE c_cursor_getexpirylist CURSOR FOR
		SELECT  BANK_NAME,
			OB_BANK_ACCT_NUM,
			OB_ACCT_CCY,
			OB_OWNER_NAME,
			TO_CHAR(trunc(OB_KEY_EXPIRED_DATETIME),'YYYYMMDD')
		FROM	OL_BANK_ACCTS,
			BANK_DESC
		WHERE	OB_INT_BANK_CODE = INTERNAL_BANK_CODE
		  AND	trunc(OB_KEY_EXPIRED_DATETIME) <= trunc(sysdate)+14
		  AND	OB_STATUS_TYPE IN ('N','A','S','B')
		ORDER BY OB_KEY_EXPIRED_DATETIME;	

	EXEC SQL OPEN c_cursor_getexpirylist;
	do {
		EXEC SQL FETCH c_cursor_getexpirylist
		INTO
			:v_bank_name:ind_bank_name,
			:v_bank_acct_num:ind_bank_acct_num,
			:v_acct_ccy:ind_acct_ccy,
			:v_owner_name:ind_owner_name,
			:v_key_expiry_date:ind_key_expiry_date;

		if (SQLCODE == SQL_NOT_FOUND) {
			break;
		}

		/*f_bank_name*/
			sprintf(csTag,"f_bank_name-%d",iChk);
			sprintf(csTmp,"%.*s",v_bank_name.len,v_bank_name.arr);
			iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,csTag,"STR","stbl_body-0",csTmp);
		/*f_bank_acct_num*/
			sprintf(csTag,"f_bank_acct_num-%d",iChk);
			sprintf(csTmp,"%.*s",v_bank_acct_num.len,v_bank_acct_num.arr);
			iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,csTag,"STR","stbl_body-0",csTmp);
		/*f_acct_ccy*/
			sprintf(csTag,"f_acct_ccy-%d",iChk);
			sprintf(csTmp,"%.*s",v_acct_ccy.len,v_acct_ccy.arr);
			iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,csTag,"STR","stbl_body-0",csTmp);
		/*f_owner_name*/
			sprintf(csTag,"f_owner_name-%d",iChk);
			sprintf(csTmp,"%.*s",v_owner_name.len,v_owner_name.arr);
			iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,csTag,"STR","stbl_body-0",csTmp);
		/*f_key_expiry_date*/
			sprintf(csTag,"f_key_expiry_date-%d",iChk);
			sprintf(csTmp,"%.*s",v_key_expiry_date.len,v_key_expiry_date.arr);
			iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,csTag,"STR","stbl_body-0",csTmp);

		iChk ++;
	}
	while(PD_TRUE && iRet == SUCCESS);
	EXEC SQL CLOSE c_cursor_getexpirylist;

/*stimestamp*/
	iDynCnt = set_tpl_dyn_int(hContext,iDynCnt,"stimestamp-0","SEC","stimestamp-0",0);
/*ftimestamp*/
	iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,"ftimestamp-0","STR","stimestamp-0",write_tpl_timestamp());

/*stitle*/
	iDynCnt = set_tpl_dyn_int(hContext,iDynCnt,"stitle-0","SEC","stitle-0",0);
/*ftitle*/
	sprintf(csTmp, "Bank Accts key expiry date hit before %.*s",v_alert_date.len,v_alert_date.arr);
	iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,"ftitle-0","STR","stitle-0",csTmp);

	if (iChk == 0)
	{
		//Print no record
		iDynCnt = set_tpl_dyn_int(hContext, iDynCnt, "stbl_norecord-0", "SEC", "stbl_norecord-0", 0);
		sprintf(csTmp,"%.*s",v_alert_date.len,v_alert_date.arr);
	}
	else
	{
		iDynCnt = set_tpl_dyn_int(hContext, iDynCnt, "stbl_head-0", "SEC", "stbl_head-0", 0);
		iDynCnt = set_tpl_dyn_int(hContext, iDynCnt, "stbl_body-0", "SEC", "stbl_body-0", iChk);
	}

	iDynCnt = set_tpl_dyn_cstring(hContext,iDynCnt,"subject","GLO","STR","Bank Accts Key Expiry Date Within Next Two Weeks");

	PutField_CString(hContext,"source","BATCH");
	PutField_CString(hContext,"funct","BKA_EXPIRY_DATE");
	PutField_Char(hContext,"party_type",'G');
	PutField_CString(hContext,"party_id","000");

	PutField_Int(hContext,"total_dyn",iDynCnt);

	BOObjPtr = CreateObj(BOPtr,"BOAlertEmail","ProcessTpl");
	if((unsigned long)((*BOObjPtr)(hContext) != PD_OK)){
		iRet=INT_CODE_ERROR;
		PutField_Int(hContext,"internal_error",iRet);
DEBUGLOG(("Authorize::ProcessTpl Failed\n"));
ERRLOG("TxnMgtByUsALT::Authorize::ProcessTpl Failed, iRet=%d\n", iRet);
	}
	else
	{
DEBUGLOG(("Authorize::ProcessTpl Success\n"));
	}

	FREE_ME(hContext);

	return iRet;

sql_error:
DEBUGLOG(("check_bank_acct_key_expiry error code %d\n", sqlca.sqlcode));
DEBUGLOG(("\n%.*s\n", sqlca.sqlerrm.sqlerrml, sqlca.sqlerrm.sqlerrmc));
    EXEC SQL WHENEVER SQLERROR CONTINUE;
    EXEC SQL CLOSE c_cursor_getalertdate;
    EXEC SQL CLOSE c_cursor_getexpirylist;
    EXEC SQL ROLLBACK RELEASE;
    return PD_ERR;
}


