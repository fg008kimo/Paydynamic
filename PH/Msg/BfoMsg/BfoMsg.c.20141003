int FormatMsg(const hash_t* hIn,unsigned char *outMsg,int *outLen)
{
	int	iRet = PD_OK;
	char*   csTmp = NULL;
	char*   csPtr = NULL;
	char*   csBuf;
	double  dTmp;
	char*   csMethod = NULL;

	csBuf = (char*) malloc (MAX_MSG_SIZE + 1 );

	memset(outMsg,0,sizeof(outMsg));
	if (GetField_CString(hIn,"redirect_url",&csPtr)) {
DEBUGLOG(("FormatMsg here\n"));
		strcat((char *)outMsg,csPtr);
		strcat((char *)outMsg,"?");
		strcat((char*)outMsg,MY_BFO_TOKEN);


/* MemberID */
		if (GetField_CString(hIn,"psp_merchant_id",&csTmp)) {
			strcat((char*)outMsg,"MemberID");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmp);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: MemberID = [%s]\n",csTmp));
		}
		else {
			iRet = PD_ERR;
DEBUGLOG(("FormatMsg:: ***psp_merchant_id is missing\n"));
		}

/*TerminalID*/
		if (GetField_CString(hIn,"terminal_id",&csTmp)) {
			strcat((char*)outMsg,"TerminalID");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmp);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: TerminalID = [%s]\n",csTmp));
		}
		else {
			iRet = PD_ERR;
DEBUGLOG(("FormatMsg:: *terminal_id is missing\n"));
		}


/* InterfaceVersion*/
		strcat((char*)outMsg,"InterfaceVersion");
		strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
		strcat((char*)outMsg,"4.0");
		strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: InterfaceVersion = [4.0]\n"));
		
/* KeyType */
		strcat((char*)outMsg,"KeyType");
		strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
		strcat((char*)outMsg,"1");
		strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: KeyType = [1]\n"));


/* PayID */
		if (GetField_CString(hIn,"bank_code",&csTmp)) {
			strcat((char*)outMsg,"PayID");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmp);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: PayID = [%s]\n",csTmp));
		}
		else {
DEBUGLOG(("FormatMsg:: bank_code is missing!!!\n"));
		}

/* TradeDate*/
		if (GetField_CString(hIn,"local_tm_date",&csTmp)) {
DEBUGLOG(("FormatMsg:: local_tm_date = [%s]\n",csTmp));
                        char*   csPtr2;
                        char    csDateTime[PD_DATETIME_LEN * 2];
                        if (GetField_CString(hIn,"local_tm_time",&csPtr2)) {
DEBUGLOG(("FormatMsg:: local_tm_time = [%s]\n",csPtr2));
                                sprintf(csDateTime,"%s%s",csTmp,csPtr2);
DEBUGLOG(("FormatMsg:: orderDatetime = [%s]\n",csDateTime));
                                strcat((char*)outMsg,"TradeDate");
                                strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
                                strcat((char*)outMsg,csDateTime);
                                strcat((char*)outMsg,MY_BFO_TOKEN);
                        }
                        else {
DEBUGLOG(("FormatMsg:: local_tm_time is missing!!!\n"));
                        }
                }
                else {
DEBUGLOG(("FormatMsg:: local_tm_date is missing!!!\n"));
                }

/* TransID*/

		if (GetField_CString(hIn,"txn_seq",&csTmp)) {
			strcat((char*)outMsg,"TransID");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmp);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: TransID = [%s]\n",csTmp));
		}

/* OrderMoney*/
		if (GetField_Double(hIn,"psp_txn_amt",&dTmp)) {

			char    csTmpAmt[PD_TMP_BUF_LEN +1];
			sprintf((char*)csTmpAmt,"%ld",double2long(dTmp));
			strcat((char*)outMsg,"OrderMoney");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmpAmt);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: OrderMoney = [%s]\n",csTmpAmt));
		}
		else {
DEBUGLOG(("FormatMsg:: psp_txn_amt is missing!!!\n"));
		}

/* ProductName */
		strcat((char*)outMsg,"ProductName");
		strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
		strcat((char*)outMsg,MY_BFO_TOKEN);

/* Amount *///1
		strcat((char*)outMsg,"Amount");
		strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
		strcat((char*)outMsg,"1");
		strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: Amount = [1]\n"));

/* Username */
		strcat((char*)outMsg,"Username");
		strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
		strcat((char*)outMsg,MY_BFO_TOKEN);

/* AdditionalInfo */
		strcat((char*)outMsg,"AdditionalInfo");
		strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
		strcat((char*)outMsg,MY_BFO_TOKEN);

/* PageUrl */
		if (GetField_CString(hIn,"fe_url",&csTmp)) {
			strcat((char*)outMsg,"PageUrl");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmp);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: PageUrl = [%s]\n",csTmp));
		}

/* ReturnUrl */
		if (GetField_CString(hIn,"return_url_only",&csTmp)) {
			strcat((char*)outMsg,"ReturnUrl");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmp);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: ReturnUrl = [%s]\n",csTmp));
		}
		else {
			iRet = PD_ERR;
DEBUGLOG(("FormatMsg:: *** return_url_only is missing\n"));
		}

/* Signature */
		if (GetField_CString(hIn,"sign",&csTmp)) {
			strcat((char*)outMsg,"Signature");
			strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
			strcat((char*)outMsg,csTmp);
			strcat((char*)outMsg,MY_BFO_TOKEN);
DEBUGLOG(("FormatMsg:: Signature = [%s]\n",csTmp));
		}

/* NoticeType *///1
		strcat((char*)outMsg,"NoticeType");
		strcat((char*)outMsg,MY_BFO_FIELD_TOKEN);
		strcat((char*)outMsg,"1");
DEBUGLOG(("FormatMsg:: NoticeType = [1]\n"));

/* url_method */
                if (GetField_CString(hIn,"url_method",&csMethod)) {
DEBUGLOG(("FormatMsg:: url_method = [%s]\n",csMethod));
                }

DEBUGLOG(("FormatMsg:: outmsg = [%s]\n",outMsg));
		base64_encode(outMsg,strlen((char *)outMsg),csBuf,PD_MAX_BUFFER);
DEBUGLOG(("FormatMsg:: after encode\n"));
                outMsg[0] = '\0';
                strcat((char*)outMsg,"redirect_url");
                strcat((char*)outMsg,"=");
                strcat((char*)outMsg,csBuf);
                strcat((char*)outMsg,MY_BFO_TOKEN);
		strcat((char*)outMsg,"url_method");
		strcat((char*)outMsg,"=");
		strcat((char*)outMsg,csMethod);
                strcat((char*)outMsg,MY_BFO_TOKEN);
		strcat((char*)outMsg,"ret_status=0");
DEBUGLOG(("FormatMsg:: outMsg = [%s]\n",outMsg));

		*outLen = strlen((const char*)outMsg);
	}
	else {
		iRet = PD_ERR;
DEBUGLOG(("FormatMsg:: Redirct url not found\n"));
	}


DEBUGLOG(("FormatMsg:: normal exit iret =[%d]\n",iRet));
	FREE_ME(csBuf);
	return 	iRet;
}



int BreakDownMsg(hash_t *hOut,const unsigned char *inMsg,int inLen)
{
	int	iRet = PD_OK;
	char	*csPtr;
	hash_t  *hRec;

        hRec = (hash_t*)  malloc (sizeof(hash_t));
        hash_init(hRec,0);

DEBUGLOG(("BreakDownMsg()\n"));
DEBUGLOG(("DATA = [%s][%d]\n",inMsg,inLen));

	if (Str2Cls(hRec,(char *)inMsg,MY_BFO_TOKEN, MY_BFO_FIELD_TOKEN) == PD_OK) {

/* MerchantID */
		if (GetField_CString(hRec,"MerchantID",&csPtr)) {
			PutField_CString(hOut,"MerchantID",csPtr);
DEBUGLOG(("BreakDownMsg:: MerchantID = [%s]\n",csPtr));
		}
		else{
DEBUGLOG(("BreakDownMsg:: MerchantID not found\n"));
		}

/* TerminalID*/
		if (GetField_CString(hRec,"TerminalID",&csPtr)) {
			PutField_CString(hOut,"TerminalID",csPtr);
DEBUGLOG(("BreakDownMsg:: TerminalID = [%s]\n",csPtr));
		}
		else{
DEBUGLOG(("BreakDownMsg:: TerminalID not found\n"));
		}

/* TransID */
		if (GetField_CString(hRec,"TransID",&csPtr)) {
			PutField_CString(hOut,"txn_seq",csPtr);
DEBUGLOG(("BreakDownMsg:: txn_seq = [%s]\n",csPtr));
		}
		else{
DEBUGLOG(("BreakDownMsg:: txn_seq not found\n"));
		}

/* Result */
		if (GetField_CString(hRec,"Result",&csPtr)) {
			PutField_CString(hOut,"status",csPtr);
DEBUGLOG(("BreakDownMsg:: status = [%s]\n",csPtr));
		}
		else{
DEBUGLOG(("BreakDownMsg:: status not found\n"));
		}

/* ResultDesc */
		if (GetField_CString(hRec,"ResultDesc",&csPtr)) {
			PutField_CString(hOut,"ResultDesc",csPtr);
DEBUGLOG(("BreakDownMsg:: ResultDesc = [%s]\n",csPtr));
		}
		else{
DEBUGLOG(("BreakDownMsg:: ResultDesc not found\n"));
		}

/* FactMoney */
		if (GetField_CString(hRec,"FactMoney",&csPtr)) {
			PutField_CString(hOut,"txn_amt",csPtr);
DEBUGLOG(("BreakDownMsg:: txn_amt = [%s]\n",csPtr));
		}
		else{
DEBUGLOG(("BreakDownMsg:: txn_amt not found\n"));
		}

/* AdditionalInfo */
		if (GetField_CString(hRec,"AdditionalInfo",&csPtr)) {
			PutField_CString(hOut,"AdditionalInfo",csPtr);
DEBUGLOG(("BreakDownMsg:: AdditionalInfo = [%s]\n",csPtr));
		}
		else{
DEBUGLOG(("BreakDownMsg:: AdditionalInfo not found\n"));
		}

/* SuccTime */
		if (GetField_CString(hRec,"SuccTime",&csPtr)) {
DEBUGLOG(("BreakDownMsg:: txn_date = [%s]\n",csPtr));
			csPtr[PD_DATETIME_LEN] = '\0';
                        char csTxnDate[PD_DATE_LEN +1];
			sprintf(csTxnDate,"%.*s",PD_DATE_LEN,csPtr);

			PutField_CString(hOut,"fundin_date",csPtr);
			PutField_CString(hOut,"txn_date",csTxnDate);
		}

/* Md5Sign */
                if (GetField_CString(hRec,"Md5Sign",&csPtr)) {
                        PutField_CString(hOut,"sign",csPtr);
DEBUGLOG(("BreakDownMsg:: sign = [%s]\n",csPtr));
                }
                else{
DEBUGLOG(("BreakDownMsg:: sign not found\n"));
                }

	}
	else {
DEBUGLOG(("BreakDownMsg() Error\n"));
                iRet = PD_ERR;
        }
        
        hash_destroy(hRec);
	FREE_ME(hRec);

DEBUGLOG(("BreakDownMsg Exit\n"));
	return	iRet;
}

